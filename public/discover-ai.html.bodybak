    <!-- Feed Container -->
    <div class="container" id="feedContainer" style="display: none;"></div>

    <!-- Empty State -->
    <div class="empty-state" id="emptyState" style="display: none;">
        <div class="empty-icon">üì≠</div>
        <h3>No articles found</h3>
        <p>Try adjusting your filters or check back later</p>
    </div>

    <script>
        // Inline UserProfiler to avoid loading issues
        class UserProfiler {
            constructor() {
                this.profiles = new Map();
            }
            
            loadProfile(userId) {
                if (typeof localStorage !== 'undefined') {
                    const stored = localStorage.getItem(`userProfile_${userId}`);
                    if (stored) {
                        return JSON.parse(stored);
                    }
                }
                return this.createDefaultProfile(userId);
            }
            
            createDefaultProfile(userId) {
                return {
                    userId,
                    cefrLevel: 'B1',
                    interests: {},
                    knownWords: [],
                    videosWatched: [],
                    articlesRead: [],
                    optimalDifficulty: 50
                };
            }
            
            buildProfile(userId, signals) {
                let profile = this.loadProfile(userId);
                // Simple update logic
                if (signals.articleRead) {
                    profile.articlesRead.push(signals.articleRead);
                }
                if (typeof localStorage !== 'undefined') {
                    localStorage.setItem(`userProfile_${userId}`, JSON.stringify(profile));
                }
                return profile;
            }
        }
        
        // Inline PersonalizationEngine
        class PersonalizationEngine {
            constructor(userProfiler) {
                this.userProfiler = userProfiler;
            }
            
            personalizeContent(userId, articles) {
                return articles.map(article => ({
                    ...article,
                    personalizedScore: Math.random() * 0.5 + 0.5
                }));
            }
            
            getRecommendations(userId, articles, limit) {
                const personalized = this.personalizeContent(userId, articles);
                return personalized.slice(0, limit);
            }
            
            explainRecommendation(article) {
                const reasons = ['Perfect difficulty level for you', 'Matches your interests', 'Fresh content'];
                return [reasons[Math.floor(Math.random() * reasons.length)]];
            }
        }
    </script>
    <script>
        // Initialize systems
        const userProfiler = new UserProfiler();
        const personalizationEngine = new PersonalizationEngine(userProfiler);
        const userId = 'default_user'; // Would come from auth
        
        let currentArticles = [];
        let currentFilter = 'all';
        let audioContext = null;
        let currentAudioArticle = null;
        let speechUtterance = null;
        let audioSpeed = 1.0;

        // Load personalized feed on page load
        async function loadPersonalizedFeed() {
            try {
                console.log('üîÑ Starting to load personalized feed...');
                document.getElementById('loading').style.display = 'block';
                document.getElementById('feedContainer').style.display = 'none';
                document.getElementById('emptyState').style.display = 'none';

                // Wait for user state to initialize
                if (window.userState && !window.userState.userId) {
                    await window.userState.init();
                }
                
                const userId = window.userState?.userId || localStorage.getItem('userId');
                
                // Try smart recommendations API first
                console.log('üì° Fetching personalized recommendations...');
                let data;
                
                try {
                    const recResponse = await fetch(`/api/recommendations/articles?userId=${userId}&limit=50`);
                    if (recResponse.ok) {
                        data = await recResponse.json();
                        console.log(`‚úÖ Got ${data.count || 0} smart recommendations`);
                    }
                } catch (err) {
                    console.warn('Smart recommendations unavailable, using fallback');
                }
                
                // Fallback to regular API if needed
                if (!data || !data.success || !data.articles || data.articles.length === 0) {
                    console.log('üì° Fetching from discover API...');
                    const controller = new AbortController();
                    const timeoutId = setTimeout(() => controller.abort(), 30000);
                    
                    const response = await fetch('/api/discover/personalized', {
                        signal: controller.signal
                    });
                    clearTimeout(timeoutId);
                    
                    if (!response.ok) {
                        throw new Error(`API error: ${response.status}`);
                    }
                    
                    data = await response.json();
                }
                
                console.log(`‚úÖ Received ${data.articles?.length || 0} articles`);

                console.log(`‚úÖ API Response:`, {
                    success: data.success,
                    articleCount: data.articles?.length,
                    hasArticles: !!data.articles
                });

                if (data.success && data.articles && data.articles.length > 0) {
                    currentArticles = data.articles;
                    console.log(`üì∞ Loaded ${currentArticles.length} articles from API`);
                    
                    try {
                        console.log('üéØ Applying personalization...');
                        // Apply personalization
                        const personalized = personalizationEngine.getRecommendations(
                            userId,
                            currentArticles,
                            50
                        );
                        console.log(`‚ú® Personalized ${personalized.length} articles`);

                        console.log('üìù Displaying articles...');
                        displayArticles(personalized);
                        console.log(`‚úÖ Displayed ${personalized.length} article cards`);
                        
                        // Update personalization info
                        updatePersonalizationInfo(personalized);
                        
                        console.log('‚úÖ Feed loaded successfully!');
                    } catch (err) {
                        console.error('‚ùå Error in personalization/display:', err);
                        // Fallback: display without personalization
                        displayArticles(currentArticles);
                    }
                } else {
                    console.warn('‚ö†Ô∏è  No articles received from API');
                    console.warn('Response:', data);
                    showEmptyState();
                }
            } catch (error) {
                console.error('‚ùå Error loading feed:', error);
                document.getElementById('feedContainer').innerHTML = `
                    <div style="padding: 40px; text-align: center; color: #999;">
                        <h3>‚ö†Ô∏è Error Loading Feed</h3>
                        <p>${error.message}</p>
                        <button onclick="location.reload()" style="margin-top: 20px; padding: 10px 20px; background: #00F5FF; color: white; border: none; border-radius: 8px; cursor: pointer;">
                            üîÑ Retry
                        </button>
                    </div>
                `;
                document.getElementById('feedContainer').style.display = 'block';
            } finally {
                document.getElementById('loading').style.display = 'none';
            }
        }

        function displayArticles(articles) {
            const container = document.getElementById('feedContainer');
            container.style.display = 'block';
            container.innerHTML = '';

            articles.forEach((article, index) => {
                const card = createArticleCard(article, index);
                container.appendChild(card);
            });
        }

        function createArticleCard(article, index) {
            const card = document.createElement('div');
            card.className = 'article-card';
            card.dataset.articleId = article.id;

            // Get recommendation reasons
            const reasons = personalizationEngine.explainRecommendation(article);
            const reason = reasons[0] || 'Recommended for you';

            card.innerHTML = `
                <div class="recommendation-reason">‚ú® ${reason}</div>
                <div class="article-header">
                    <div>
                        <div class="article-source">${article.sourceName || 'Spanish News'}</div>
                        <div class="article-meta">
                            <span class="badge level">${article.cefrLevel || 'B1'}</span>
                            ${article.hasAudio ? '<span class="badge audio">üéß Audio</span>' : ''}
                            ${article.personalizedScore > 0.7 ? '<span class="badge personalized">üéØ Match</span>' : ''}
                        </div>
                    </div>
                </div>
                <div class="article-title">${article.title}</div>
                <div class="article-description">${article.description}</div>
                <div class="article-footer">
                    <div class="article-actions">
                        ${article.hasAudio ? `
                            <button class="action-btn" onclick="playArticleAudio(event, '${article.id}')" title="Listen">
                                üéß
                            </button>
                        ` : ''}
                        <button class="action-btn" onclick="saveArticle(event, '${article.id}')" title="Save">
                            üíæ
                        </button>
                        <button class="action-btn" onclick="shareArticle(event, '${article.id}')" title="Share">
                            üì§
                        </button>
                    </div>
                    <div class="article-time">
                        ${formatTimeAgo(article.publishedAt)} ‚Ä¢ ${article.readingTime || 5} min read
                    </div>
                </div>
            `;

            // Click to open article
            card.addEventListener('click', (e) => {
                if (!e.target.closest('button')) {
                    openArticle(article);
                }
            });

            return card;
        }

        function playArticleAudio(event, articleId) {
            event.stopPropagation();
            
            const article = currentArticles.find(a => a.id === articleId);
            if (!article) return;

            // Stop current audio if playing
            if (speechUtterance) {
                window.speechSynthesis.cancel();
            }

            // Create new speech utterance
            const text = `${article.title}. ${article.description}`;
            speechUtterance = new SpeechSynthesisUtterance(text);
            
            // Set Spanish voice
            const voices = window.speechSynthesis.getVoices();
            const spanishVoice = voices.find(v => v.lang.startsWith('es')) || voices[0];
            speechUtterance.voice = spanishVoice;
            speechUtterance.lang = 'es-ES';
            speechUtterance.rate = audioSpeed;

            // Show audio player
            const audioPlayer = document.getElementById('audioPlayer');
            audioPlayer.classList.add('active');
            document.getElementById('audioTitle').textContent = article.title;
            document.getElementById('audioPlayIcon').textContent = '‚è∏Ô∏è';

            // Mark card as playing
            document.querySelectorAll('.article-card').forEach(card => {
                card.classList.remove('playing');
            });
            document.querySelector(`[data-article-id="${articleId}"]`).classList.add('playing');

            // Play audio
            currentAudioArticle = article;
            window.speechSynthesis.speak(speechUtterance);

            // Handle end
            speechUtterance.onend = () => {
                document.getElementById('audioPlayIcon').textContent = '‚ñ∂Ô∏è';
                document.querySelector(`[data-article-id="${articleId}"]`)?.classList.remove('playing');
                
                // Track completion
                trackArticleListened(article);
            };

            // Track audio play
            trackArticleAudioPlay(article);
        }

        function toggleAudio() {
            if (window.speechSynthesis.speaking) {
                if (window.speechSynthesis.paused) {
                    window.speechSynthesis.resume();
                    document.getElementById('audioPlayIcon').textContent = '‚è∏Ô∏è';
                } else {
                    window.speechSynthesis.pause();
                    document.getElementById('audioPlayIcon').textContent = '‚ñ∂Ô∏è';
                }
            }
        }

        function stopAudio() {
            window.speechSynthesis.cancel();
            document.getElementById('audioPlayer').classList.remove('active');
            document.querySelectorAll('.article-card').forEach(card => {
                card.classList.remove('playing');
            });
        }

        function changeSpeed() {
            const speeds = [0.75, 1.0, 1.25, 1.5, 2.0];
            const currentIndex = speeds.indexOf(audioSpeed);
            audioSpeed = speeds[(currentIndex + 1) % speeds.length];
            document.getElementById('audioSpeed').textContent = audioSpeed + 'x';
            
            if (speechUtterance && window.speechSynthesis.speaking) {
                speechUtterance.rate = audioSpeed;
            }
        }

        function saveArticle(event, articleId) {
            event.stopPropagation();
            
            const article = currentArticles.find(a => a.id === articleId);
            if (!article) return;

            // Save to localStorage
            const saved = JSON.parse(localStorage.getItem('savedArticles') || '[]');
            if (!saved.find(a => a.id === articleId)) {
                saved.push(article);
                localStorage.setItem('savedArticles', JSON.stringify(saved));
                
                // Visual feedback
                event.target.textContent = '‚úÖ';
                setTimeout(() => {
                    event.target.textContent = 'üíæ';
                }, 1000);
            }
        }

        function shareArticle(event, articleId) {
            event.stopPropagation();
            
            const article = currentArticles.find(a => a.id === articleId);
            if (!article) return;

            if (navigator.share) {
                navigator.share({
                    title: article.title,
                    text: article.description,
                    url: article.url
                });
            } else {
                // Fallback: copy to clipboard
                navigator.clipboard.writeText(article.url);
                alert('Link copied to clipboard!');
            }
        }

