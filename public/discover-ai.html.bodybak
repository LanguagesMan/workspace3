    <!-- Personalization Info -->
    <div class="personalization-info" id="personalizationInfo">
        üéØ <strong>Personalized for you</strong> based on your learning level and interests
    </div>

    <!-- Filters -->
    <div class="filters" id="filters">
        <button class="filter-btn active" onclick="filterContent('all')">üî• For You</button>
