        // Make every Spanish word clickable
        function makeArticleWordsClickable(contentElement) {
            if (!contentElement) return;
            
            const paragraphs = contentElement.querySelectorAll('p');
            paragraphs.forEach(p => {
                const text = p.textContent;
                const words = text.split(/(\s+|[.,!?;:()])/);
                
                p.innerHTML = words.map(word => {
                    // Check if it's a Spanish word
                    if (/[a-z√°√©√≠√≥√∫√±√º]{2,}/i.test(word)) {
                        return `<span class="clickable-word" data-word="${word.toLowerCase().replace(/[.,!?;:()]/g, '')}">${word}</span>`;
                    }
                    return word;
                }).join('');
            });
            
            // Add click handlers
            contentElement.querySelectorAll('.clickable-word').forEach(span => {
                span.addEventListener('click', async (e) => {
                    e.stopPropagation();
                    const word = span.dataset.word;
                    await showWordTranslation(word, span);
                });
            });
        }
        
