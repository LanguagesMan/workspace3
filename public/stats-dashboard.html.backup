<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wispr Flow Stats - Language Learning</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .header {
            text-align: center;
            color: white;
            margin-bottom: 40px;
        }

        .header h1 {
            font-size: 2.5rem;
            margin-bottom: 10px;
        }

        .header p {
            font-size: 1.1rem;
            opacity: 0.9;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: white;
            border-radius: 16px;
            padding: 24px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            transition: transform 0.3s ease;
        }

        .stat-card:hover {
            transform: translateY(-5px);
        }

        .stat-card h3 {
            color: #667eea;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 12px;
        }

        .stat-value {
            font-size: 2.5rem;
            font-weight: bold;
            color: #333;
            margin-bottom: 8px;
        }

        .stat-label {
            color: #666;
            font-size: 0.9rem;
        }

        .level-badge {
            display: inline-block;
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            padding: 8px 20px;
            border-radius: 20px;
            font-weight: bold;
            font-size: 1.2rem;
        }

        .progress-bar {
            width: 100%;
            height: 12px;
            background: #e0e0e0;
            border-radius: 6px;
            overflow: hidden;
            margin: 12px 0;
        }

        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, #667eea, #764ba2);
            transition: width 0.5s ease;
        }

        .streak-counter {
            display: flex;
            align-items: center;
            gap: 12px;
            font-size: 2rem;
        }

        .streak-fire {
            font-size: 3rem;
            animation: flame 1s ease-in-out infinite;
        }

        @keyframes flame {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.1); }
        }

        .vocab-breakdown {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 12px;
            margin-top: 16px;
        }

        .vocab-item {
            text-align: center;
            padding: 12px;
            background: #f5f5f5;
            border-radius: 8px;
        }

        .vocab-item .level {
            font-weight: bold;
            color: #667eea;
            font-size: 0.9rem;
        }

        .vocab-item .count {
            font-size: 1.4rem;
            font-weight: bold;
            color: #333;
        }

        .chart-container {
            background: white;
            border-radius: 16px;
            padding: 24px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            margin-bottom: 30px;
        }

        .chart-title {
            color: #667eea;
            font-size: 1.2rem;
            margin-bottom: 20px;
            font-weight: bold;
        }

        .week-chart {
            display: flex;
            align-items: flex-end;
            justify-content: space-between;
            height: 200px;
            gap: 8px;
        }

        .day-bar {
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: flex-end;
        }

        .bar {
            width: 100%;
            background: linear-gradient(180deg, #667eea, #764ba2);
            border-radius: 6px 6px 0 0;
            transition: height 0.3s ease;
            position: relative;
        }

        .bar-label {
            margin-top: 8px;
            font-size: 0.75rem;
            color: #666;
        }

        .bar-value {
            position: absolute;
            top: -25px;
            left: 50%;
            transform: translateX(-50%);
            font-size: 0.8rem;
            font-weight: bold;
            color: #667eea;
        }

        .achievements {
            display: flex;
            flex-wrap: wrap;
            gap: 12px;
            margin-top: 16px;
        }

        .achievement {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            padding: 12px 20px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            gap: 8px;
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
        }

        .achievement .icon {
            font-size: 1.5rem;
        }

        .achievement .title {
            font-weight: bold;
            font-size: 0.9rem;
        }

        .today-stats {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 16px;
            margin-top: 16px;
        }

        .today-item {
            text-align: center;
        }

        .today-item .value {
            font-size: 2rem;
            font-weight: bold;
            color: #667eea;
        }

        .today-item .label {
            color: #666;
            font-size: 0.85rem;
            margin-top: 4px;
        }

        .user-selector {
            background: white;
            border-radius: 12px;
            padding: 16px;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .user-selector input {
            flex: 1;
            padding: 12px;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            font-size: 1rem;
        }

        .user-selector button {
            padding: 12px 24px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            border: none;
            border-radius: 8px;
            font-weight: bold;
            cursor: pointer;
            transition: transform 0.2s;
        }

        .user-selector button:hover {
            transform: scale(1.05);
        }

        .loading {
            text-align: center;
            color: white;
            font-size: 1.2rem;
            padding: 40px;
        }
    </style>

    <!-- Sentry Error Tracking -->
    <meta name="sentry-dsn" content="">
    <meta name="sentry-environment" content="production">
    <meta name="sentry-traces-sample-rate" content="0.1">
    <meta name="app-version" content="1.0.0">
    <script src="/lib/sentry-client.js" defer></script>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>üìä Wispr Flow Stats</h1>
            <p>Your Language Learning Journey</p>
        </div>

        <div class="user-selector">
            <input type="text" id="userIdInput" placeholder="Enter User ID (or leave blank for demo)" value="demo-user">
            <button onclick="loadStats()">Load Stats</button>
        </div>

        <div id="statsContainer">
            <div class="loading">Loading your stats...</div>
        </div>
    </div>

    <script>
        let currentUserId = 'demo-user';

        async function loadStats() {
            const userId = document.getElementById('userIdInput').value || 'demo-user';
            currentUserId = userId;

            try {
                const response = await fetch(`/api/user/stats/${userId}`);
                const data = await response.json();

                if (data.success) {
                    renderStats(data.stats);
                }
            } catch (error) {
                console.error('Error loading stats:', error);
                document.getElementById('statsContainer').innerHTML = `
                    <div class="loading">Error loading stats. Please try again.</div>
                `;
            }
        }

        function renderStats(stats) {
            const container = document.getElementById('statsContainer');

            const xpProgress = (stats.user.xp % 100);
            const nextLevel = Math.floor(stats.user.xp / 100) + 1;

            container.innerHTML = `
                <div class="stats-grid">
                    <div class="stat-card">
                        <h3>Current Level</h3>
                        <div class="stat-value">
                            <span class="level-badge">${stats.user.level}</span>
                        </div>
                        <div class="stat-label">CEFR Level</div>
                        <div class="progress-bar">
                            <div class="progress-fill" style="width: ${xpProgress}%"></div>
                        </div>
                        <div class="stat-label">${stats.user.xp} XP ‚Ä¢ Next level at ${nextLevel * 100} XP</div>
                    </div>

                    <div class="stat-card">
                        <h3>Streak</h3>
                        <div class="streak-counter">
                            <span class="streak-fire">üî•</span>
                            <div>
                                <div class="stat-value">${stats.user.streak}</div>
                                <div class="stat-label">days</div>
                            </div>
                        </div>
                        <div class="stat-label" style="margin-top: 12px;">Longest: ${stats.user.longestStreak} days</div>
                    </div>

                    <div class="stat-card">
                        <h3>Total Vocabulary</h3>
                        <div class="stat-value">${stats.vocabulary.total}</div>
                        <div class="stat-label">${stats.vocabulary.mastered} mastered ‚Ä¢ ${stats.vocabulary.learning} learning</div>
                    </div>
                </div>

                <div class="chart-container">
                    <div class="chart-title">üìà 7-Day Progress</div>
                    <div class="week-chart">
                        ${stats.weekProgress.map(day => {
                            const maxWords = Math.max(...stats.weekProgress.map(d => d.words), 1);
                            const height = (day.words / maxWords) * 100;
                            const date = new Date(day.date);
                            const dayName = date.toLocaleDateString('en-US', { weekday: 'short' });

                            return `
                                <div class="day-bar">
                                    <div class="bar" style="height: ${height}%">
                                        ${day.words > 0 ? `<div class="bar-value">${day.words}</div>` : ''}
                                    </div>
                                    <div class="bar-label">${dayName}</div>
                                </div>
                            `;
                        }).join('')}
                    </div>
                </div>

                <div class="stats-grid">
                    <div class="stat-card">
                        <h3>Today's Progress</h3>
                        <div class="today-stats">
                            <div class="today-item">
                                <div class="value">${stats.today.wordsLearned}</div>
                                <div class="label">Words</div>
                            </div>
                            <div class="today-item">
                                <div class="value">${stats.today.xpEarned}</div>
                                <div class="label">XP</div>
                            </div>
                            <div class="today-item">
                                <div class="value">${stats.today.timeSpent}</div>
                                <div class="label">Minutes</div>
                            </div>
                        </div>
                    </div>

                    <div class="stat-card">
                        <h3>Vocabulary by Level</h3>
                        <div class="vocab-breakdown">
                            <div class="vocab-item">
                                <div class="level">A1</div>
                                <div class="count">${stats.vocabulary.byLevel.A1}</div>
                            </div>
                            <div class="vocab-item">
                                <div class="level">A2</div>
                                <div class="count">${stats.vocabulary.byLevel.A2}</div>
                            </div>
                            <div class="vocab-item">
                                <div class="level">B1</div>
                                <div class="count">${stats.vocabulary.byLevel.B1}</div>
                            </div>
                            <div class="vocab-item">
                                <div class="level">B2</div>
                                <div class="count">${stats.vocabulary.byLevel.B2}</div>
                            </div>
                            <div class="vocab-item">
                                <div class="level">C1</div>
                                <div class="count">${stats.vocabulary.byLevel.C1}</div>
                            </div>
                            <div class="vocab-item">
                                <div class="level">C2</div>
                                <div class="count">${stats.vocabulary.byLevel.C2}</div>
                            </div>
                        </div>
                    </div>
                </div>

                ${stats.achievements.length > 0 ? `
                    <div class="chart-container">
                        <div class="chart-title">üèÜ Achievements</div>
                        <div class="achievements">
                            ${stats.achievements.map(achievement => `
                                <div class="achievement">
                                    <span class="icon">${achievement.icon}</span>
                                    <div>
                                        <div class="title">${achievement.title}</div>
                                        <div style="font-size: 0.75rem; opacity: 0.9;">${achievement.description}</div>
                                    </div>
                                </div>
                            `).join('')}
                        </div>
                    </div>
                ` : ''}
            `;
        }

        // Load initial stats
        loadStats();
    </script>
</body>
</html>
