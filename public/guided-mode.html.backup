<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Guided Learning Journeys ‚Äì VIDA</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        :root {
            color-scheme: dark;
            --bg: #0a0a0f;
            --card: #131318;
            --card-hover: #1a1a22;
            --border: rgba(255,255,255,0.08);
            --primary: #00F5FF;
            --primary-hover: #00d4e0;
            --success: #00FF88;
            --warning: #FFB800;
            --text: rgba(255,255,255,0.95);
            --text-muted: rgba(255,255,255,0.65);
            --text-subtle: rgba(255,255,255,0.45);
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
            background: radial-gradient(circle at top right, rgba(0,245,255,0.12), transparent 45%),
                        radial-gradient(circle at bottom left, rgba(255,0,140,0.08), transparent 55%),
                        var(--bg);
            min-height: 100vh;
            color: var(--text);
            overflow-x: hidden;
        }

        /* Header */
        header {
            padding: 48px clamp(20px, 5vw, 80px) 32px;
            border-bottom: 1px solid var(--border);
            background: rgba(10,10,15,0.6);
            backdrop-filter: blur(20px);
            position: sticky;
            top: 0;
            z-index: 100;
        }

        .header-content {
            max-width: 1400px;
            margin: 0 auto;
        }

        header h1 {
            font-size: clamp(32px, 5vw, 56px);
            font-weight: 800;
            letter-spacing: -0.03em;
            margin-bottom: 12px;
            background: linear-gradient(135deg, #fff 0%, var(--primary) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        header p {
            color: var(--text-muted);
            font-size: clamp(16px, 2.5vw, 19px);
            line-height: 1.6;
            max-width: 720px;
        }

        /* Tabs */
        .tabs {
            display: flex;
            gap: 8px;
            margin-top: 24px;
            overflow-x: auto;
            padding-bottom: 8px;
        }

        .tabs::-webkit-scrollbar {
            height: 4px;
        }

        .tabs::-webkit-scrollbar-thumb {
            background: var(--border);
            border-radius: 2px;
        }

        .tab {
            padding: 12px 24px;
            background: transparent;
            border: 1px solid var(--border);
            border-radius: 12px;
            color: var(--text-muted);
            font-weight: 600;
            font-size: 14px;
            cursor: pointer;
            transition: all 0.2s;
            white-space: nowrap;
        }

        .tab:hover {
            background: var(--card);
            border-color: rgba(255,255,255,0.15);
        }

        .tab.active {
            background: var(--primary);
            color: #000;
            border-color: var(--primary);
        }

        /* Main Layout */
        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 48px clamp(20px, 5vw, 80px);
        }

        /* Tab Content */
        .tab-content {
            display: none;
        }

        .tab-content.active {
            display: block;
            animation: fadeIn 0.3s ease;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* Journey Cards Grid */
        .journey-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
            gap: 24px;
            margin-top: 32px;
        }

        .journey-card {
            background: var(--card);
            border: 1px solid var(--border);
            border-radius: 20px;
            padding: 28px;
            cursor: pointer;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
        }

        .journey-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, rgba(0,245,255,0.1) 0%, transparent 50%);
            opacity: 0;
            transition: opacity 0.3s;
        }

        .journey-card:hover {
            transform: translateY(-4px);
            border-color: var(--primary);
            box-shadow: 0 20px 40px rgba(0,245,255,0.15);
        }

        .journey-card:hover::before {
            opacity: 1;
        }

        .journey-icon {
            font-size: 48px;
            margin-bottom: 16px;
            display: inline-block;
            filter: drop-shadow(0 4px 8px rgba(0,245,255,0.3));
        }

        .journey-card h3 {
            font-size: 22px;
            font-weight: 700;
            margin-bottom: 8px;
            position: relative;
        }

        .journey-card .level-badge {
            display: inline-block;
            padding: 4px 10px;
            background: rgba(0,245,255,0.15);
            border: 1px solid rgba(0,245,255,0.3);
            border-radius: 6px;
            font-size: 11px;
            font-weight: 600;
            color: var(--primary);
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 12px;
        }

        .journey-card p {
            color: var(--text-muted);
            line-height: 1.6;
            margin-bottom: 20px;
            font-size: 15px;
        }

        .journey-meta {
            display: flex;
            gap: 16px;
            flex-wrap: wrap;
        }

        .meta-item {
            display: flex;
            align-items: center;
            gap: 6px;
            font-size: 13px;
            color: var(--text-subtle);
        }

        .meta-icon {
            font-size: 16px;
        }

        /* Topic List */
        .topic-list {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 20px;
            margin-top: 32px;
        }

        .topic-card {
            background: var(--card);
            border: 1px solid var(--border);
            border-radius: 16px;
            padding: 24px;
            cursor: pointer;
            transition: all 0.2s;
            display: flex;
            align-items: start;
            gap: 16px;
        }

        .topic-card:hover {
            background: var(--card-hover);
            border-color: rgba(255,255,255,0.15);
            transform: translateX(4px);
        }

        .topic-icon {
            font-size: 32px;
            flex-shrink: 0;
        }

        .topic-info h4 {
            font-size: 17px;
            font-weight: 600;
            margin-bottom: 4px;
        }

        .topic-info p {
            font-size: 13px;
            color: var(--text-subtle);
        }

        /* Progress Section */
        .progress-section {
            background: var(--card);
            border: 1px solid var(--border);
            border-radius: 20px;
            padding: 32px;
            margin-bottom: 32px;
        }

        .progress-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 24px;
        }

        .progress-header h2 {
            font-size: 24px;
            font-weight: 700;
        }

        .progress-stats {
            display: flex;
            gap: 32px;
            margin-bottom: 20px;
        }

        .stat {
            text-align: center;
        }

        .stat-value {
            font-size: 36px;
            font-weight: 800;
            color: var(--primary);
            line-height: 1;
            margin-bottom: 4px;
        }

        .stat-label {
            font-size: 13px;
            color: var(--text-subtle);
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .progress-bar-container {
            background: rgba(255,255,255,0.05);
            border-radius: 12px;
            height: 12px;
            overflow: hidden;
            position: relative;
        }

        .progress-bar {
            background: linear-gradient(90deg, var(--primary) 0%, var(--success) 100%);
            height: 100%;
            transition: width 0.5s cubic-bezier(0.4, 0, 0.2, 1);
            border-radius: 12px;
            position: relative;
        }

        .progress-bar::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
            animation: shimmer 2s infinite;
        }

        @keyframes shimmer {
            0% { transform: translateX(-100%); }
            100% { transform: translateX(100%); }
        }

        /* AI Coach Panel */
        .ai-coach-panel {
            background: var(--card);
            border: 1px solid var(--border);
            border-radius: 20px;
            padding: 32px;
            margin-top: 32px;
        }

        .coach-header {
            display: flex;
            align-items: center;
            gap: 12px;
            margin-bottom: 20px;
        }

        .coach-avatar {
            width: 48px;
            height: 48px;
            background: linear-gradient(135deg, var(--primary), #00d4e0);
            border-radius: 50%;
            display: grid;
            place-items: center;
            font-size: 24px;
        }

        .coach-header h3 {
            font-size: 20px;
            font-weight: 700;
        }

        .chat-messages {
            max-height: 400px;
            overflow-y: auto;
            margin-bottom: 20px;
            padding: 16px;
            background: rgba(0,0,0,0.2);
            border-radius: 16px;
        }

        .message {
            margin-bottom: 16px;
            display: flex;
            gap: 12px;
        }

        .message.user {
            flex-direction: row-reverse;
        }

        .message-bubble {
            background: rgba(255,255,255,0.08);
            padding: 12px 16px;
            border-radius: 16px;
            max-width: 70%;
            font-size: 15px;
            line-height: 1.5;
        }

        .message.user .message-bubble {
            background: var(--primary);
            color: #000;
        }

        .chat-input-area {
            display: flex;
            gap: 12px;
        }

        input, textarea {
            width: 100%;
            background: rgba(255,255,255,0.05);
            border: 1px solid var(--border);
            border-radius: 12px;
            padding: 14px 16px;
            color: var(--text);
            font-family: inherit;
            font-size: 15px;
            transition: all 0.2s;
        }

        input:focus, textarea:focus {
            outline: none;
            border-color: var(--primary);
            background: rgba(255,255,255,0.08);
        }

        button {
            background: var(--primary);
            color: #000;
            border: none;
            border-radius: 12px;
            padding: 14px 24px;
            font-weight: 600;
            font-size: 15px;
            cursor: pointer;
            transition: all 0.2s;
            white-space: nowrap;
        }

        button:hover {
            background: var(--primary-hover);
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(0,245,255,0.3);
        }

        button:active {
            transform: translateY(0);
        }

        button:disabled {
            opacity: 0.5;
            cursor: not-allowed;
            transform: none;
        }

        /* Day Cards for Multi-Day Journey */
        .days-list {
            display: grid;
            gap: 16px;
            margin-top: 24px;
        }

        .day-card {
            background: rgba(255,255,255,0.03);
            border: 1px solid var(--border);
            border-radius: 16px;
            padding: 20px;
            display: flex;
            align-items: center;
            gap: 20px;
            transition: all 0.2s;
        }

        .day-card.active {
            background: rgba(0,245,255,0.1);
            border-color: var(--primary);
        }

        .day-card.completed {
            opacity: 0.6;
        }

        .day-card.locked {
            opacity: 0.4;
            cursor: not-allowed;
        }

        .day-number {
            width: 56px;
            height: 56px;
            background: rgba(255,255,255,0.08);
            border-radius: 14px;
            display: grid;
            place-items: center;
            font-size: 24px;
            font-weight: 800;
            flex-shrink: 0;
        }

        .day-card.active .day-number {
            background: var(--primary);
            color: #000;
        }

        .day-card.completed .day-number::after {
            content: '‚úì';
            font-size: 28px;
        }

        .day-info {
            flex: 1;
        }

        .day-info h4 {
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 4px;
        }

        .day-info p {
            font-size: 14px;
            color: var(--text-subtle);
        }

        /* Badges */
        .badges-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
            gap: 16px;
            margin-top: 24px;
        }

        .badge-card {
            background: var(--card);
            border: 1px solid var(--border);
            border-radius: 16px;
            padding: 20px;
            text-align: center;
            transition: all 0.2s;
        }

        .badge-card:hover {
            transform: scale(1.05);
            border-color: var(--primary);
        }

        .badge-icon {
            font-size: 48px;
            margin-bottom: 8px;
            display: inline-block;
        }

        .badge-card h4 {
            font-size: 14px;
            font-weight: 600;
            margin-bottom: 4px;
        }

        .badge-card p {
            font-size: 12px;
            color: var(--text-subtle);
        }

        /* Loading State */
        .loading {
            text-align: center;
            padding: 60px 20px;
            color: var(--text-muted);
        }

        .spinner {
            width: 48px;
            height: 48px;
            border: 3px solid rgba(255,255,255,0.1);
            border-top-color: var(--primary);
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
            margin: 0 auto 16px;
        }

        @keyframes spin {
            to { transform: rotate(360deg); }
        }

        /* Responsive */
        @media (max-width: 768px) {
            .journey-grid, .topic-list {
                grid-template-columns: 1fr;
            }

            .progress-stats {
                flex-direction: column;
                gap: 16px;
            }

            .tabs {
                gap: 4px;
            }

            .tab {
                padding: 10px 16px;
                font-size: 13px;
            }
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 80px 20px;
            color: var(--text-muted);
        }

        .empty-state-icon {
            font-size: 64px;
            margin-bottom: 16px;
            opacity: 0.5;
        }

        .empty-state h3 {
            font-size: 20px;
            font-weight: 600;
            margin-bottom: 8px;
        }
    </style>

    <!-- Sentry Error Tracking -->
    <meta name="sentry-dsn" content="">
    <meta name="sentry-environment" content="production">
    <meta name="sentry-traces-sample-rate" content="0.1">
    <meta name="app-version" content="1.0.0">
    <script src="/lib/sentry-client.js" defer></script>
</head>
<body>
    <header>
        <div class="header-content">
            <h1>üéØ Guided Learning Journeys</h1>
            <p>
                Structured paths that take you from beginner to fluent. Each journey combines articles, videos, 
                interactive quizzes, and AI coaching to ensure you actually learn and remember.
            </p>
            
            <div class="tabs">
                <button class="tab active" data-tab="journeys">7-Day Programs</button>
                <button class="tab" data-tab="topics">Single Topics</button>
                <button class="tab" data-tab="progress">My Progress</button>
                <button class="tab" data-tab="coach">AI Coach</button>
            </div>
        </div>
    </header>

    <div class="container">
        <!-- 7-Day Programs Tab -->
        <div id="journeys-tab" class="tab-content active">
            <h2 style="font-size: 28px; margin-bottom: 16px;">Multi-Day Learning Programs</h2>
            <p style="color: var(--text-muted); margin-bottom: 24px;">
                Complete immersive 7-day journeys that build skills progressively
            </p>
            
            <div id="journeysGrid" class="journey-grid">
                <div class="loading">
                    <div class="spinner"></div>
                    <p>Loading journeys...</p>
                </div>
            </div>
        </div>

        <!-- Single Topics Tab -->
        <div id="topics-tab" class="tab-content">
            <h2 style="font-size: 28px; margin-bottom: 16px;">Quick Topic Sessions</h2>
            <p style="color: var(--text-muted); margin-bottom: 24px;">
                15-20 minute focused sessions on specific topics
            </p>
            
            <div id="topicsGrid" class="topic-list">
                <div class="loading">
                    <div class="spinner"></div>
                    <p>Loading topics...</p>
                </div>
            </div>
        </div>

        <!-- Progress Tab -->
        <div id="progress-tab" class="tab-content">
            <div class="progress-section">
                <div class="progress-header">
                    <h2>Your Learning Progress</h2>
                </div>
                
                <div class="progress-stats">
                    <div class="stat">
                        <div class="stat-value" id="wordsLearned">0</div>
                        <div class="stat-label">Words Learned</div>
                    </div>
                    <div class="stat">
                        <div class="stat-value" id="journeysCompleted">0</div>
                        <div class="stat-label">Journeys Done</div>
                    </div>
                    <div class="stat">
                        <div class="stat-value" id="streakDays">0</div>
                        <div class="stat-label">Day Streak</div>
                    </div>
                    <div class="stat">
                        <div class="stat-value" id="xpEarned">0</div>
                        <div class="stat-label">Total XP</div>
                    </div>
                </div>
                
                <div class="progress-bar-container">
                    <div class="progress-bar" id="overallProgress" style="width: 0%"></div>
                </div>
            </div>

            <h3 style="font-size: 22px; margin-bottom: 20px;">Earned Badges</h3>
            <div id="badgesGrid" class="badges-grid">
                <div class="empty-state">
                    <div class="empty-state-icon">üèÜ</div>
                    <h3>No badges yet</h3>
                    <p>Complete journeys to earn achievement badges!</p>
                </div>
            </div>
        </div>

        <!-- AI Coach Tab -->
        <div id="coach-tab" class="tab-content">
            <div class="ai-coach-panel">
                <div class="coach-header">
                    <div class="coach-avatar">üß†</div>
                    <div>
                        <h3>AI Learning Coach</h3>
                        <p style="color: var(--text-subtle); font-size: 14px;">
                            Ask me anything about Spanish grammar, vocabulary, or culture!
                        </p>
                    </div>
                </div>

                <div class="chat-messages" id="chatMessages">
                    <div class="message">
                        <div class="message-bubble">
                            ¬°Hola! I'm your AI Spanish coach. Ask me questions, request examples, 
                            or get pronunciation help. How can I help you today?
                        </div>
                    </div>
                </div>

                <div class="chat-input-area">
                    <input 
                        type="text" 
                        id="coachInput" 
                        placeholder="Ask a question..."
                        onkeypress="if(event.key==='Enter') sendCoachMessage()"
                    >
                    <button onclick="sendCoachMessage()">Send</button>
                </div>
            </div>

            <div style="margin-top: 32px;">
                <h3 style="font-size: 22px; margin-bottom: 16px;">Quick Actions</h3>
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 16px;">
                    <button onclick="askCoach('How do I use ser vs estar?')" style="background: var(--card); border: 1px solid var(--border); color: var(--text);">
                        üìö Ser vs Estar
                    </button>
                    <button onclick="askCoach('Give me 3 examples with comida')" style="background: var(--card); border: 1px solid var(--border); color: var(--text);">
                        üí° Example Sentences
                    </button>
                    <button onclick="askCoach('How do I pronounce √±?')" style="background: var(--card); border: 1px solid var(--border); color: var(--text);">
                        üó£Ô∏è Pronunciation Help
                    </button>
                    <button onclick="askCoach('Tell me about tapas culture')" style="background: var(--card); border: 1px solid var(--border); color: var(--text);">
                        üåç Cultural Notes
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Tab switching
        document.querySelectorAll('.tab').forEach(tab => {
            tab.addEventListener('click', () => {
                const tabName = tab.dataset.tab;
                
                // Update active states
                document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
                document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
                
                tab.classList.add('active');
                document.getElementById(`${tabName}-tab`).classList.add('active');
            });
        });

        // Load data
        async function loadJourneys() {
            try {
                const response = await fetch('/api/guided/journeys?level=A1');
                const data = await response.json();
                
                if (data.success && data.journeys) {
                    renderJourneys(data.journeys);
                }
            } catch (error) {
                console.error('Failed to load journeys:', error);
                document.getElementById('journeysGrid').innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">‚ö†Ô∏è</div>
                        <h3>Failed to load journeys</h3>
                        <p>Please try again later</p>
                    </div>
                `;
            }
        }

        async function loadTopics() {
            try {
                const response = await fetch('/api/guided/topics?level=A1');
                const data = await response.json();
                
                if (data.success && data.topics) {
                    renderTopics(data.topics);
                }
            } catch (error) {
                console.error('Failed to load topics:', error);
            }
        }

        function renderJourneys(journeys) {
            const grid = document.getElementById('journeysGrid');
            
            if (!journeys || journeys.length === 0) {
                grid.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">üìö</div>
                        <h3>No journeys available</h3>
                        <p>Check back soon for new learning programs!</p>
                    </div>
                `;
                return;
            }

            grid.innerHTML = journeys.map(journey => `
                <div class="journey-card" onclick="startMultiDayJourney('${journey.id}')">
                    <div class="journey-icon">${journey.badge?.icon || 'üåü'}</div>
                    <div class="level-badge">${journey.level}</div>
                    <h3>${journey.title}</h3>
                    <p>${journey.description}</p>
                    <div class="journey-meta">
                        <div class="meta-item">
                            <span class="meta-icon">üìÖ</span>
                            <span>${journey.duration} days</span>
                        </div>
                        <div class="meta-item">
                            <span class="meta-icon">‚≠ê</span>
                            <span>${journey.totalXP} XP</span>
                        </div>
                        <div class="meta-item">
                            <span class="meta-icon">üìù</span>
                            <span>${journey.topics?.length || 0} topics</span>
                        </div>
                    </div>
                </div>
            `).join('');
        }

        function renderTopics(topics) {
            const grid = document.getElementById('topicsGrid');
            
            grid.innerHTML = topics.map(topic => `
                <div class="topic-card" onclick="startSingleTopic('${topic.id}')">
                    <div class="topic-icon">${topic.icon}</div>
                    <div class="topic-info">
                        <h4>${topic.title}</h4>
                        <p>${topic.description || ''}</p>
                        <div style="margin-top: 8px; font-size: 12px; color: var(--text-subtle);">
                            ${topic.level} ¬∑ ${topic.estimatedTime} min ¬∑ ${topic.wordCount} words
                        </div>
                    </div>
                </div>
            `).join('');
        }

        async function startMultiDayJourney(journeyId) {
            if (!confirm('Start this 7-day learning journey?')) return;
            
            try {
                const response = await fetch('/api/guided/journey/multi-day/start', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        userId: 'demo-user',
                        journeyId
                    })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    alert(`Journey started! You'll learn ${data.journey.days.length} topics over ${data.journey.duration} days.`);
                    // In production, navigate to journey page
                }
            } catch (error) {
                console.error('Failed to start journey:', error);
                alert('Failed to start journey. Please try again.');
            }
        }

        async function startSingleTopic(topicId) {
            try {
                const response = await fetch('/api/guided/journey/start', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        userId: 'demo-user',
                        topicId,
                        journeyType: 'standard'
                    })
                });

                const data = await response.json();
                
                if (data.success) {
                    alert(`Journey started! You'll learn ${data.journey.targetWords?.length || 0} new words.`);
                    // In production, navigate to session page
                }
            } catch (error) {
                console.error('Failed to start topic:', error);
                alert('Failed to start topic. Please try again.');
            }
        }

        async function sendCoachMessage() {
            const input = document.getElementById('coachInput');
            const message = input.value.trim();
            
            if (!message) return;
            
            // Add user message to chat
            addMessageToChat(message, true);
            input.value = '';
            
            // Get AI response
            try {
                const response = await fetch('/api/guided/ai-coach/chat', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        userId: 'demo-user',
                        message,
                        learningContext: {}
                    })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    addMessageToChat(data.response, false);
                }
            } catch (error) {
                console.error('Coach error:', error);
                addMessageToChat('Sorry, I had trouble responding. Please try again!', false);
            }
        }

        function addMessageToChat(text, isUser) {
            const chat = document.getElementById('chatMessages');
            const messageDiv = document.createElement('div');
            messageDiv.className = `message ${isUser ? 'user' : ''}`;
            messageDiv.innerHTML = `<div class="message-bubble">${text}</div>`;
            chat.appendChild(messageDiv);
            chat.scrollTop = chat.scrollHeight;
        }

        function askCoach(question) {
            document.getElementById('coachInput').value = question;
            sendCoachMessage();
        }

        // Update progress display (mock data for now)
        function updateProgress() {
            document.getElementById('wordsLearned').textContent = '127';
            document.getElementById('journeysCompleted').textContent = '3';
            document.getElementById('streakDays').textContent = '12';
            document.getElementById('xpEarned').textContent = '1,540';
            document.getElementById('overallProgress').style.width = '45%';
        }

        // Initialize
        loadJourneys();
        loadTopics();
        updateProgress();
    </script>
</body>
</html>

