                    <button onclick="removeArtist('${artist.replace(/'/g, "\\'")}' )" style="background: none; border: none; color: white; cursor: pointer; font-size: 16px; padding: 0; margin: 0;">√ó</button>
                </div>
            `).join('');
        }

        function renderTopicChips() {
            const container = document.getElementById('favorite-topics');
            const topics = prefManager.preferences.favorite_topics || [];
            
            if (topics.length === 0) {
                container.innerHTML = '<div style="color: #999; font-size: 14px;">No favorite topics yet. Add some!</div>';
                return;
            }
            
            container.innerHTML = topics.map(topic => `
                <div style="display: inline-flex; align-items: center; gap: 8px; background: #00F5FF; color: white; padding: 6px 12px; border-radius: 20px; font-size: 14px;">
                    <span>${topic}</span>
                    <button onclick="removeTopic('${topic.replace(/'/g, "\\'")}' )" style="background: none; border: none; color: white; cursor: pointer; font-size: 16px; padding: 0; margin: 0;">√ó</button>
                </div>
            `).join('');
        }

        function renderCategoryChips() {
            const container = document.getElementById('favorite-categories');
            const categories = prefManager.preferences.favorite_categories || [];
            
            if (categories.length === 0) {
                container.innerHTML = '<div style="color: #999; font-size: 14px;">No favorite categories yet. Add some!</div>';
