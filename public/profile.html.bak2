                    <span>${category}</span>
                    <button onclick="removeCategory('${category.replace(/'/g, "\\'")}' )" style="background: none; border: none; color: white; cursor: pointer; font-size: 16px; padding: 0; margin: 0;">√ó</button>
                </div>
            `).join('');
        }

        function loadContentMix() {
            const mix = prefManager.preferences.preferred_content_types || { videos: 40, articles: 40, music: 20 };
            
            document.getElementById('video-slider').value = mix.videos;
            document.getElementById('video-percentage').textContent = mix.videos + '%';
            
            document.getElementById('article-slider').value = mix.articles;
            document.getElementById('article-percentage').textContent = mix.articles + '%';
            
            document.getElementById('music-slider').value = mix.music;
            document.getElementById('music-percentage').textContent = mix.music + '%';
        }

        async function removeArtist(artist) {
            await prefManager.removeFromList('favorite_artists', artist);
            renderArtistChips();
        }

        async function removeTopic(topic) {
            await prefManager.removeFromList('favorite_topics', topic);
            renderTopicChips();
        }

        async function removeCategory(category) {
            await prefManager.removeFromList('favorite_categories', category);
            renderCategoryChips();
        }

