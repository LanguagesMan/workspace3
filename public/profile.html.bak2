    <script>
        // Load user stats
        function loadUserStats() {
            const stats = {
                wordsLearned: parseInt(localStorage.getItem('wordsLearned') || '0'),
                videosWatched: parseInt(localStorage.getItem('videosWatched') || '0'),
                streak: parseInt(localStorage.getItem('userStreak') || '0'),
                xp: parseInt(localStorage.getItem('userXP') || '0'),
                level: parseInt(localStorage.getItem('userLevel') || '1')
            };

            document.getElementById('wordsLearnedStat').textContent = stats.wordsLearned;
            document.getElementById('videosWatchedStat').textContent = stats.videosWatched;
            document.getElementById('streakStat').textContent = stats.streak;
            document.getElementById('xpStat').textContent = stats.xp;

            // Calculate level progress
            const xpForNextLevel = stats.level * 100;
            const xpInCurrentLevel = stats.xp % 100;
            const progressPercent = (xpInCurrentLevel / xpForNextLevel) * 100;

            document.getElementById('levelProgress').textContent = `${xpInCurrentLevel} / ${xpForNextLevel} XP`;
            document.getElementById('levelProgressBar').style.width = progressPercent + '%';

            // Update user level display
            const levelNames = {
                1: 'Beginner',
                2: 'Elementary',
                3: 'Intermediate',
                4: 'Upper Intermediate',
                5: 'Advanced'
            };
            document.getElementById('userLevel').textContent = `Level ${stats.level} ‚Ä¢ ${levelNames[stats.level] || 'Master'}`;
        }

        // Load achievements
        function loadAchievements() {
            const achievements = [
                { id: 'first_video', icon: 'üë∂', name: 'First Steps', unlocked: true },
                { id: 'first_word', icon: 'üìù', name: 'Vocab Collector', unlocked: true },
                { id: 'ten_videos', icon: 'üì∫', name: 'Binge Watcher', unlocked: false },
                { id: 'ten_words', icon: 'üìö', name: 'Vocab Builder', unlocked: false },
                { id: 'three_day_streak', icon: 'üî•', name: 'Consistent', unlocked: false },
                { id: 'first_game', icon: 'üéÆ', name: 'Game On', unlocked: true },
                { id: 'week_warrior', icon: 'üèÜ', name: 'Week Warrior', unlocked: false },
                { id: 'level_up', icon: '‚¨ÜÔ∏è', name: 'Level Up!', unlocked: false }
            ];

            const grid = document.getElementById('achievementGrid');
            grid.innerHTML = achievements.map(achievement => `
                <div class="achievement-badge ${achievement.unlocked ? 'unlocked' : 'locked'}">
                    <div class="achievement-icon">${achievement.icon}</div>
                    <div class="achievement-name">${achievement.name}</div>
                </div>
            `).join('');
        }

        // Load recent activity
        function loadRecentActivity() {
            const activities = [
                { title: 'Completed Sentence Builder', time: '2 hours ago' },
                { title: 'Learned 5 new words', time: '3 hours ago' },
                { title: 'Watched 10 videos', time: '5 hours ago' },
                { title: 'Started 3-day streak', time: 'Yesterday' },
                { title: 'Unlocked "First Steps" achievement', time: '2 days ago' }
            ];

            const timeline = document.getElementById('timeline');
            timeline.innerHTML = activities.map(activity => `
                <div class="timeline-item">
                    <div class="timeline-dot"></div>
                    <div class="timeline-content">
                        <div class="timeline-title">${activity.title}</div>
                        <div class="timeline-time">${activity.time}</div>
                    </div>
                </div>
            `).join('');
        }

        // Toggle setting
        function toggleSetting(element, settingName) {
            element.classList.toggle('active');
            const isActive = element.classList.contains('active');
            localStorage.setItem(settingName, isActive);
            console.log(`${settingName}: ${isActive}`);
        }

        // Go back
        function goBack() {
            window.location.href = '/tiktok-video-feed.html';
        }

        // Initialize
        loadUserStats();
        loadAchievements();
        loadRecentActivity();

        // Track page view
        const profileVisits = parseInt(localStorage.getItem('profileVisits') || '0') + 1;
        localStorage.setItem('profileVisits', profileVisits);

        // === PREFERENCES MANAGEMENT ===

