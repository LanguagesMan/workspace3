<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Videos - Spanish Learning</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        
        html {
            scroll-snap-type: y mandatory;
            overflow-y: scroll;
            height: 100vh;
        }
        
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            background: #000;
            color: #fff;
        }
        
        .video-container {
            position: relative;
            height: 100vh;
            width: 100vw;
            scroll-snap-align: start;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        video {
            width: 100%;
            height: 100vh;
            object-fit: contain;
            background: #000;
        }
        
        .transcription {
            position: absolute;
            bottom: 180px;
            left: 20px;
            right: 80px;
            z-index: 10;
        }
        
        .spanish {
            font-size: 24px;
            font-weight: 600;
            margin-bottom: 8px;
            text-shadow: 2px 2px 8px rgba(0,0,0,0.9);
        }
        
        .word {
            display: inline-block;
            padding: 2px 4px;
            margin: 0 2px;
            cursor: pointer;
            transition: all 0.2s;
        }
        
        .word:hover {
            background: rgba(255,255,255,0.2);
            transform: scale(1.1);
        }
        
        .english {
            font-size: 18px;
            opacity: 0;
            transition: opacity 0.3s;
            text-shadow: 2px 2px 8px rgba(0,0,0,0.9);
        }
        
        .english.show { opacity: 0.9; }
        
        .controls {
            position: absolute;
            right: 20px;
            bottom: 120px;
            display: flex;
            flex-direction: column;
            gap: 20px;
            z-index: 20;
        }
        
        .btn {
            width: 56px;
            height: 56px;
            border-radius: 50%;
            background: rgba(255,255,255,0.2);
            backdrop-filter: blur(10px);
            border: none;
            color: #fff;
            font-size: 20px;
            cursor: pointer;
            transition: all 0.2s;
        }
        
        .btn:hover {
            background: rgba(255,255,255,0.3);
            transform: scale(1.1);
        }
        
        .btn.active { background: #10B981; }
        
        .info {
            position: absolute;
            bottom: 20px;
            left: 20px;
            right: 80px;
            z-index: 15;
        }
        
        .title {
            font-size: 16px;
            font-weight: 600;
            margin-bottom: 8px;
        }
        
        .meta {
            display: flex;
            gap: 16px;
            font-size: 14px;
            opacity: 0.8;
        }
        
        .quiz {
            position: fixed;
            inset: 0;
            background: rgba(0,0,0,0.95);
            display: none;
            align-items: center;
            justify-content: center;
            z-index: 100;
        }
        
        .quiz.show { display: flex; }
        
        .quiz-box {
            background: #1a1a1a;
            border-radius: 24px;
            padding: 32px;
            max-width: 500px;
            width: 90%;
        }
        
        .quiz-title {
            font-size: 24px;
            font-weight: 700;
            margin-bottom: 24px;
            text-align: center;
        }
        
        .question {
            font-size: 18px;
            margin-bottom: 20px;
        }
        
        .options {
            display: flex;
            flex-direction: column;
            gap: 12px;
            margin-bottom: 24px;
        }
        
        .option {
            padding: 16px;
            background: rgba(255,255,255,0.1);
            border: 2px solid transparent;
            border-radius: 12px;
            cursor: pointer;
            transition: all 0.2s;
        }
        
        .option:hover {
            background: rgba(255,255,255,0.15);
            border-color: rgba(255,255,255,0.3);
        }
        
        .option.correct { background: #10B981; border-color: #10B981; }
        .option.incorrect { background: #EF4444; border-color: #EF4444; }
        
        .next-btn {
            width: 100%;
            padding: 16px;
            background: #10B981;
            border: none;
            border-radius: 12px;
            color: #fff;
            font-size: 18px;
            font-weight: 600;
            cursor: pointer;
        }
        
        .next-btn:disabled {
            background: rgba(255,255,255,0.2);
            cursor: not-allowed;
        }
        
        .tooltip {
            position: fixed;
            background: #1a1a1a;
            border-radius: 12px;
            padding: 16px;
            box-shadow: 0 8px 24px rgba(0,0,0,0.5);
            z-index: 50;
            display: none;
        }
        
        .tooltip.show { display: block; }
        
        .tooltip-word {
            font-size: 20px;
            font-weight: 600;
            color: #10B981;
            margin-bottom: 8px;
        }
        
        .tooltip-trans {
            font-size: 16px;
            margin-bottom: 12px;
        }
        
        .save-btn {
            width: 100%;
            padding: 10px;
            background: #10B981;
            border: none;
            border-radius: 8px;
            color: #fff;
            font-weight: 600;
            cursor: pointer;
        }
        
        .badge {
            position: absolute;
            top: 20px;
            right: 20px;
            padding: 8px 16px;
            background: rgba(16,185,129,0.9);
            border-radius: 20px;
            font-size: 14px;
            font-weight: 600;
            z-index: 15;
        }
        
        .loading {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
            z-index: 200;
        }
        
        .spinner {
            width: 40px;
            height: 40px;
            border: 4px solid rgba(255,255,255,0.3);
            border-top-color: #10B981;
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
            margin: 0 auto 12px;
        }
        
        @keyframes spin {
            to { transform: rotate(360deg); }
        }
        
        .toast {
            position: fixed;
            bottom: 100px;
            left: 50%;
            transform: translateX(-50%);
            background: #10B981;
            padding: 16px 24px;
            border-radius: 12px;
            font-weight: 600;
            opacity: 0;
            transition: opacity 0.3s;
            z-index: 150;
        }
        
        .toast.show { opacity: 1; }
    </style>
</head>
<body>
    <div class="loading" id="loading">
        <div class="spinner"></div>
        <div>Loading videos...</div>
    </div>
    
    <div id="container"></div>
    
    <div class="quiz" id="quiz">
        <div class="quiz-box">
            <h2 class="quiz-title">üéØ Quick Quiz!</h2>
            <div id="quizContent"></div>
        </div>
    </div>
    
    <div class="tooltip" id="tooltip">
        <div class="tooltip-word" id="tooltipWord"></div>
        <div class="tooltip-trans" id="tooltipTrans"></div>
        <button class="save-btn" onclick="saveWord()">üíæ Save to Vocabulary</button>
    </div>
    
    <div class="toast" id="toast"></div>
    
    <script>
        let videos = [];
        let currentIdx = 0;
        let currentSpeed = 1.0;
        let showEng = false;
        let currentWord = null;
        
        async function loadVideos() {
            try {
                const res = await fetch('http://localhost:3002/api/videos');
                videos = await res.json();
                renderVideos();
                document.getElementById('loading').style.display = 'none';
            } catch (err) {
                console.error(err);
                document.getElementById('loading').innerHTML = '<div>Error loading videos</div>';
            }
        }
        
        function renderVideos() {
            const container = document.getElementById('container');
            videos.forEach((v, i) => {
                container.innerHTML += `
                    <div class="video-container">
                        <video id="v${i}" src="${v.videoUrl}" playsinline muted loop ${i === 0 ? 'autoplay' : ''}></video>
                        <div class="badge">${v.level}</div>
                        <div class="transcription">
                            ${v.transcription.spanish.map((line, j) => `
                                <div>
                                    <div class="spanish">
                                        ${line.words.map(w => `<span class="word" onclick="showWord('${w}', event, ${i})">${w}</span>`).join(' ')}
                                    </div>
                                    <div class="english" id="en${i}-${j}">${v.transcription.english[j].text}</div>
                                </div>
                            `).join('')}
                        </div>
                        <div class="controls">
                            <button class="btn" onclick="toggleSpeed(${i})" title="Speed"><span id="sp${i}">1x</span></button>
                            <button class="btn" onclick="toggleTrans(${i})" title="Translate">üåê</button>
                            <button class="btn" onclick="showQuiz(${i})" title="Quiz">üéØ</button>
                            <button class="btn" onclick="like(${i})" title="Like">‚ù§Ô∏è</button>
                        </div>
                        <div class="info">
                            <div class="title">${v.title}</div>
                            <div class="meta">
                                <span>‚ù§Ô∏è ${fmt(v.likes)}</span>
                                <span>üíæ ${fmt(v.saves)}</span>
                                <span>${v.level}</span>
                            </div>
                        </div>
                    </div>
                `;
            });
            setupScroll();
        }
        
        function setupScroll() {
            window.addEventListener('scroll', () => {
                const newIdx = Math.round(window.scrollY / window.innerHeight);
                if (newIdx !== currentIdx) {
                    document.getElementById(\`v\${currentIdx}\`)?.pause();
                    currentIdx = newIdx;
                    const vid = document.getElementById(\`v\${currentIdx}\`);
                    if (vid) {
                        vid.play();
                        fetch('http://localhost:3002/api/analytics', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ contentId: videos[currentIdx].id, action: 'view' })
                        });
                    }
                }
            });
        }
        
        function toggleSpeed(i) {
            const speeds = [0.5, 0.75, 1.0, 1.25, 1.5];
            const idx = speeds.indexOf(currentSpeed);
            currentSpeed = speeds[(idx + 1) % speeds.length];
            document.getElementById(\`v\${i}\`).playbackRate = currentSpeed;
            document.getElementById(\`sp\${i}\`).textContent = \`\${currentSpeed}x\`;
        }
        
        function toggleTrans(i) {
            showEng = !showEng;
            videos[i].transcription.spanish.forEach((_, j) => {
                const el = document.getElementById(\`en\${i}-\${j}\`);
                if (showEng) el.classList.add('show');
                else el.classList.remove('show');
            });
        }
        
        function showWord(word, e, vidIdx) {
            e.stopPropagation();
            const vocab = videos[vidIdx].vocabulary.find(v => 
                v.word.toLowerCase() === word.toLowerCase().replace(/[¬°!¬ø?.,]/g, '')
            );
            if (vocab) {
                currentWord = { word: vocab.word, translation: vocab.translation, vidIdx };
                document.getElementById('tooltipWord').textContent = vocab.word;
                document.getElementById('tooltipTrans').textContent = vocab.translation;
                const tooltip = document.getElementById('tooltip');
                tooltip.style.left = \`\${e.clientX - 100}px\`;
                tooltip.style.top = \`\${e.clientY - 120}px\`;
                tooltip.classList.add('show');
                setTimeout(() => tooltip.classList.remove('show'), 3000);
            }
        }
        
        async function saveWord() {
            if (!currentWord) return;
            try {
                await fetch('http://localhost:3002/api/vocabulary/save', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        word: currentWord.word,
                        translation: currentWord.translation,
                        videoId: videos[currentWord.vidIdx].id
                    })
                });
                toast('‚úÖ Word saved!');
                document.getElementById('tooltip').classList.remove('show');
            } catch (err) {
                toast('‚ùå Error');
            }
        }
        
        function showQuiz(i) {
            const v = videos[i];
            const modal = document.getElementById('quiz');
            const content = document.getElementById('quizContent');
            let qIdx = 0;
            let score = 0;
            
            function render() {
                const q = v.quiz.questions[qIdx];
                content.innerHTML = \`
                    <div class="question">Q\${qIdx + 1}/\${v.quiz.questions.length}: \${q.question}</div>
                    <div class="options">
                        \${q.options.map(opt => \`
                            <div class="option" onclick="answer('\${opt}', '\${q.correct}', this)">\${opt}</div>
                        \`).join('')}
                    </div>
                    <button class="next-btn" id="nextBtn" onclick="next()" disabled>Next</button>
                \`;
            }
            
            window.answer = function(sel, correct, el) {
                document.querySelectorAll('.option').forEach(o => o.style.pointerEvents = 'none');
                if (sel === correct) {
                    el.classList.add('correct');
                    score++;
                } else {
                    el.classList.add('incorrect');
                    document.querySelectorAll('.option').forEach(o => {
                        if (o.textContent.trim() === correct) o.classList.add('correct');
                    });
                }
                document.getElementById('nextBtn').disabled = false;
            };
            
            window.next = function() {
                qIdx++;
                if (qIdx < v.quiz.questions.length) {
                    render();
                } else {
                    const pct = Math.round((score / v.quiz.questions.length) * 100);
                    content.innerHTML = \`
                        <div style="text-align: center;">
                            <div style="font-size: 48px; margin-bottom: 16px;">\${pct >= 70 ? 'üéâ' : 'üí™'}</div>
                            <div style="font-size: 24px; margin-bottom: 12px;">Score: \${pct}%</div>
                            <div style="font-size: 16px; opacity: 0.7; margin-bottom: 24px;">
                                \${score}/\${v.quiz.questions.length} correct
                            </div>
                            <button class="next-btn" onclick="closeQuiz()">Continue</button>
                        </div>
                    \`;
                    fetch('http://localhost:3002/api/user/progress', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ videoId: v.id, quizScore: pct })
                    });
                }
            };
            
            render();
            modal.classList.add('show');
            document.getElementById(\`v\${i}\`).pause();
        }
        
        function closeQuiz() {
            document.getElementById('quiz').classList.remove('show');
            document.getElementById(\`v\${currentIdx}\`).play();
        }
        
        function like(i) {
            toast('‚ù§Ô∏è Liked!');
            fetch('http://localhost:3002/api/analytics', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ contentId: videos[i].id, action: 'like' })
            });
        }
        
        function toast(msg) {
            const t = document.getElementById('toast');
            t.textContent = msg;
            t.classList.add('show');
            setTimeout(() => t.classList.remove('show'), 2000);
        }
        
        function fmt(n) {
            if (n >= 1000000) return (n / 1000000).toFixed(1) + 'M';
            if (n >= 1000) return (n / 1000).toFixed(1) + 'K';
            return n;
        }
        
        document.addEventListener('click', (e) => {
            if (!e.target.classList.contains('word')) {
                document.getElementById('tooltip').classList.remove('show');
            }
        });
        
        loadVideos();
    </script>
</body>
</html>
