    <script type="module">
        import { createClient } from 'https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2/+esm';

        // Supabase client
        const SUPABASE_URL = 'https://uejiwteujraxczrxbqff.supabase.co';
        const SUPABASE_ANON_KEY = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6InVlaml3dGV1anJheGN6cnhicWZmIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NTk5NDMxMzksImV4cCI6MjA3NTUxOTEzOX0.iva8q5bMcLHfqd6niXqB_i-i-VrPmKLNGr9eiiPwZHQ';
        const supabase = createClient(SUPABASE_URL, SUPABASE_ANON_KEY);

        // State
        let currentUser = null;
        let userVocabulary = [];
        let conversationHistory = [];
        let isListening = false;
        let recognition = null;
        let synthesis = window.speechSynthesis;

        // DOM Elements
        const messagesContainer = document.getElementById('messagesContainer');
        const emptyState = document.getElementById('emptyState');
        const micButton = document.getElementById('micButton');
        const micIcon = document.getElementById('micIcon');
        const statusText = document.getElementById('statusText');
        const vocabCount = document.getElementById('vocabCount');
        const messageCount = document.getElementById('messageCount');
        const browserNotice = document.getElementById('browserNotice');

        // Initialize
        async function init() {
            // Check browser support
            if (!('webkitSpeechRecognition' in window) && !('SpeechRecognition' in window)) {
                browserNotice.style.display = 'block';
                micButton.disabled = true;
                return;
            }

            // Setup Speech Recognition
            const SpeechRecognition = window.SpeechRecognition || window.webkitSpeechRecognition;
            recognition = new SpeechRecognition();
            recognition.lang = 'es-ES';
            recognition.continuous = false;
            recognition.interimResults = false;

            recognition.onresult = (event) => {
                const transcript = event.results[0][0].transcript;
                handleUserSpeech(transcript);
            };

            recognition.onerror = (event) => {
                console.error('Speech recognition error:', event.error);
                stopListening();
                statusText.textContent = 'Error: ' + event.error;
            };

            recognition.onend = () => {
                stopListening();
            };

            // Load user and vocabulary
            await loadUser();
            await loadVocabulary();

            // Load conversation from localStorage
            loadConversation();

            updateStats();
        }

        // Load current user
        async function loadUser() {
            try {
                const { data: { user } } = await supabase.auth.getUser();
                currentUser = user;

                if (!user) {
                    // Create anonymous session
                    currentUser = { id: 'demo-user', email: 'demo@example.com' };
                }
            } catch (error) {
                console.error('Error loading user:', error);
                currentUser = { id: 'demo-user', email: 'demo@example.com' };
            }
        }

        // Load user's vocabulary from Supabase
        async function loadVocabulary() {
            try {
                const { data: vocabulary, error } = await supabase
                    .from('vocabulary')
                    .select('*')
                    .eq('user_id', currentUser.id)
                    .order('created_at', { ascending: false });

                if (error) throw error;

                userVocabulary = vocabulary || [];
                console.log(`‚úÖ Loaded ${userVocabulary.length} vocabulary words`);
            } catch (error) {
                console.error('Error loading vocabulary:', error);
                userVocabulary = [];
            }
        }

        // Load conversation from localStorage
        function loadConversation() {
            const saved = localStorage.getItem('voiceChatHistory');
            if (saved) {
                conversationHistory = JSON.parse(saved);
                renderMessages();
            }
        }

        // Save conversation to localStorage
        function saveConversation() {
            localStorage.setItem('voiceChatHistory', JSON.stringify(conversationHistory));
        }

        // Mic button click
        micButton.addEventListener('click', () => {
            if (isListening) {
                stopListening();
            } else {
                startListening();
            }
        });

        // Start listening
        function startListening() {
            if (!recognition) return;

            try {
                recognition.start();
                isListening = true;
                micButton.classList.add('listening');
                micIcon.textContent = 'üî¥';
                statusText.textContent = 'Listening...';
                statusText.classList.add('listening');
            } catch (error) {
                console.error('Error starting recognition:', error);
            }
        }

        // Stop listening
        function stopListening() {
            if (recognition && isListening) {
                recognition.stop();
            }
            isListening = false;
            micButton.classList.remove('listening');
            micIcon.textContent = 'üé§';
            statusText.textContent = 'Tap to speak';
            statusText.classList.remove('listening');
        }

        // Handle user speech
        async function handleUserSpeech(transcript) {
            // Add user message
            const userMessage = {
                type: 'user',
                text: transcript,
                timestamp: Date.now()
            };
            conversationHistory.push(userMessage);
            renderMessages();
            saveConversation();
            updateStats();

            // Show typing indicator
            showTypingIndicator();

            // Get AI response
            const aiResponse = await generateAIResponse(transcript);

            // Remove typing indicator
            hideTypingIndicator();

            // Add AI message
            const aiMessage = {
                type: 'ai',
                text: aiResponse.text,
                translation: aiResponse.translation,
                correction: aiResponse.correction,
                timestamp: Date.now()
            };
            conversationHistory.push(aiMessage);
            renderMessages();
            saveConversation();
            updateStats();

            // Speak AI response
            speakText(aiResponse.text);
        }

        // Generate AI response using vocabulary
        async function generateAIResponse(userText) {
            // Simple AI logic that uses user's vocabulary
            const words = userText.toLowerCase().split(/\s+/);
            const vocabWords = userVocabulary.map(v => v.word.toLowerCase());
            const matchedWords = words.filter(w => vocabWords.includes(w));

            let response = {
                text: '',
                translation: '',
                correction: null
            };

            // Generate contextual response
            if (matchedWords.length > 0) {
                // User is using their vocabulary - encourage!
                const responses = [
                    `¬°Excelente! Usaste "${matchedWords[0]}" correctamente.`,
                    `Muy bien, veo que practicaste "${matchedWords[0]}".`,
                    `¬°Genial! "${matchedWords[0]}" es una palabra importante.`
                ];
                response.text = responses[Math.floor(Math.random() * responses.length)];

                // Add follow-up question
                const followUps = [
                    ' ¬øPuedes usarla en otra oraci√≥n?',
                    ' ¬øQu√© m√°s puedes decirme?',
                    ' Cu√©ntame m√°s sobre eso.'
                ];
                response.text += followUps[Math.floor(Math.random() * followUps.length)];

                response.translation = 'Excellent! Can you use it in another sentence?';
            } else {
                // General conversation
                const greetings = ['hola', 'buenos', 'buenas', 'qu√© tal'];
                const isGreeting = words.some(w => greetings.some(g => w.includes(g)));

                if (isGreeting) {
                    response.text = '¬°Hola! ¬øC√≥mo est√°s? ¬øQu√© quieres practicar hoy?';
                    response.translation = 'Hello! How are you? What do you want to practice today?';
                } else {
                    const responses = [
                        '¬øPuedes repetir eso m√°s despacio?',
                        'Interesante. ¬øPuedes explicar m√°s?',
                        'Entiendo. ¬øY qu√© piensas de eso?',
                        '¬øPodr√≠as usar una de tus palabras guardadas?'
                    ];
                    response.text = responses[Math.floor(Math.random() * responses.length)];
                    response.translation = 'Can you repeat that slower?';
                }
            }

            // Check for common errors (simple grammar checking)
            if (userText.includes('yo es')) {
                response.correction = 'Correcci√≥n: "Yo soy" (not "yo es")';
            } else if (userText.includes('tu eres')) {
                response.correction = 'Correcci√≥n: "T√∫ eres" (with accent)';
            }

            return response;
        }

        // Speak text using Speech Synthesis
        function speakText(text) {
            if (!synthesis) return;

            // Cancel any ongoing speech
            synthesis.cancel();

            const utterance = new SpeechSynthesisUtterance(text);
            utterance.lang = 'es-ES';
            utterance.rate = 0.9;
            utterance.pitch = 1;

            // Try to use a Spanish voice
            const voices = synthesis.getVoices();
            const spanishVoice = voices.find(v => v.lang.startsWith('es'));
            if (spanishVoice) {
                utterance.voice = spanishVoice;
            }

            synthesis.speak(utterance);
        }

        // Render all messages
        function renderMessages() {
            if (conversationHistory.length === 0) {
                emptyState.style.display = 'flex';
                return;
            }

            emptyState.style.display = 'none';

            const messagesHTML = conversationHistory.map(msg => {
                const time = new Date(msg.timestamp).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });

                if (msg.type === 'user') {
                    return `
                        <div class="message user">
                            <div class="message-content">
                                <div class="message-bubble">
                                    <div class="message-text">${msg.text}</div>
                                </div>
                                <div class="message-time">${time}</div>
                            </div>
                            <div class="message-avatar">üë§</div>
                        </div>
                    `;
                } else {
                    return `
                        <div class="message ai">
                            <div class="message-avatar">ü§ñ</div>
                            <div class="message-content">
                                <div class="message-bubble">
                                    <div class="message-text">${msg.text}</div>
                                    ${msg.translation ? `<div class="message-translation">${msg.translation}</div>` : ''}
                                </div>
                                ${msg.correction ? `<div class="message-correction">
                                    <div class="correction-label">üí° Tip</div>
                                    ${msg.correction}
                                </div>` : ''}
                                <div class="message-time">${time}</div>
                            </div>
                        </div>
                    `;
                }
            }).join('');

            messagesContainer.innerHTML = messagesHTML;

            // Scroll to bottom
            messagesContainer.scrollTop = messagesContainer.scrollHeight;
        }

        // Show typing indicator
        function showTypingIndicator() {
            const indicator = document.createElement('div');
            indicator.className = 'message ai';
            indicator.id = 'typingIndicator';
            indicator.innerHTML = `
                <div class="message-avatar">ü§ñ</div>
                <div class="message-content">
                    <div class="message-bubble">
                        <div class="typing-indicator">
                            <div class="typing-dot"></div>
                            <div class="typing-dot"></div>
                            <div class="typing-dot"></div>
                        </div>
                    </div>
                </div>
            `;
            messagesContainer.appendChild(indicator);
            messagesContainer.scrollTop = messagesContainer.scrollHeight;
        }

        // Hide typing indicator
        function hideTypingIndicator() {
            const indicator = document.getElementById('typingIndicator');
            if (indicator) {
                indicator.remove();
            }
        }

        // Update stats
        function updateStats() {
            vocabCount.textContent = userVocabulary.length;
            messageCount.textContent = conversationHistory.length;
        }

        // Clear conversation
        window.clearConversation = function() {
            if (confirm('Clear all conversation history?')) {
                conversationHistory = [];
                saveConversation();
                renderMessages();
                updateStats();
            }
        };

        // Load voices when available
        if (synthesis) {
            synthesis.onvoiceschanged = () => {
                const voices = synthesis.getVoices();
                console.log('Available voices:', voices.filter(v => v.lang.startsWith('es')));
            };
        }

        // Initialize on load
        init();
    </script>
</body>
</html>
