            loadVideosWithSubtitles().then(() => {
                // Setup gesture controls after videos load
                setupGestureControls();
                // Add coverage badges
                addCoverageBadges();
            });
        });

        // üéØ Word click event delegation (TikTok instant popup)
        document.addEventListener('click', (e) => {
            if (e.target.classList.contains('word')) {
                e.stopPropagation(); // Don't trigger video click
                showWordTranslation(e.target);
            }
        });

