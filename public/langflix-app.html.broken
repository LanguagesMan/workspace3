    </nav>

    <!-- Floating Action Bar (primary thumb controls) -->
    <div class="fab-bar" aria-label="Primary controls">
        <!-- Save current video to favorites/engagement -->
        <button class="fab-btn" id="fab-save" title="Save" aria-label="Save current video">‚≠ê</button>
        <!-- Toggle translation visibility for current card -->
        <button class="fab-btn" id="fab-translate" title="Toggle translation" aria-label="Toggle translation">üàØ</button>
        <!-- Open speed menu on current card -->
        <button class="fab-btn" id="fab-speed" title="Speed" aria-label="Playback speed">‚è±Ô∏è</button>
    </div>

    <script>
        // üéØ User profile (adaptive learning state)
        let userProfile = {
            cefrLevel: 'A2',
            knownWords: [],
            simpleMode: false
        };

        // Load user profile from localStorage
        function loadUserProfile() {
            const saved = localStorage.getItem('langflix_user_profile');
            if (saved) {
                userProfile = { ...userProfile, ...JSON.parse(saved) };
            }
            updateUIFromProfile();
        }

        // Save user profile to localStorage
        function saveUserProfile() {
            localStorage.setItem('langflix_user_profile', JSON.stringify(userProfile));
        }

        // Update UI elements from profile
        function updateUIFromProfile() {
            const levelMap = { 1: 'A1', 2: 'A2', 3: 'B1', 4: 'B2', 5: 'C1', 6: 'C2' };
            const levelNames = { 'A1': 'Absolute Beginner', 'A2': 'Beginner', 'B1': 'Intermediate', 'B2': 'Upper Intermediate', 'C1': 'Advanced', 'C2': 'Mastery' };

            const levelValue = Object.keys(levelMap).find(key => levelMap[key] === userProfile.cefrLevel) || '2';

            document.getElementById('difficulty-slider').value = levelValue;
            document.getElementById('current-level-text').textContent = userProfile.cefrLevel;
            document.getElementById('user-level-badge').textContent = userProfile.cefrLevel;
            document.querySelector('.level-display span:last-child').textContent = levelNames[userProfile.cefrLevel] || 'Beginner';
            document.getElementById('simple-mode-toggle').checked = userProfile.simpleMode;

            if (userProfile.simpleMode) {
                document.body.classList.add('simple-mode');
            }
        }

        // Setup difficulty slider
        function setupDifficultySlider() {
            const slider = document.getElementById('difficulty-slider');
            const levelText = document.getElementById('current-level-text');
            const levelBadge = document.getElementById('user-level-badge');
            const levelName = document.querySelector('.level-display span:last-child');

            const levelMap = { 1: 'A1', 2: 'A2', 3: 'B1', 4: 'B2', 5: 'C1', 6: 'C2' };
            const levelNames = { 'A1': 'Absolute Beginner', 'A2': 'Beginner', 'B1': 'Intermediate', 'B2': 'Upper Intermediate', 'C1': 'Advanced', 'C2': 'Mastery' };

            slider.addEventListener('input', (e) => {
                const level = levelMap[e.target.value];
                levelText.textContent = level;
                levelBadge.textContent = level;
                levelName.textContent = levelNames[level];
                userProfile.cefrLevel = level;
                saveUserProfile();

                // Reload videos with new difficulty
                console.log(`üéØ Difficulty changed to ${level} - reloading feed...`);
                loadVideosWithSubtitles();
            });
        }

        // Setup simple mode toggle
        function setupSimpleModeToggle() {
            const toggle = document.getElementById('simple-mode-toggle');

            toggle.addEventListener('change', (e) => {
                userProfile.simpleMode = e.target.checked;
                saveUserProfile();

                if (e.target.checked) {
