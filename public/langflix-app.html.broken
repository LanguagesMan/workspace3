        console.log('‚úÖ Real-time LINE-BY-LINE transcriptions');
        console.log('‚úÖ Clickable words with instant translations');
        console.log('‚úÖ Adaptive difficulty slider (A1-C2)');
        console.log('‚úÖ Coverage badges on videos');
        console.log('‚úÖ Simple Mode toggle');
        console.log('‚úÖ Gesture controls (double-tap, long-press)');

        // ===== Floating Action Bar handlers =====
        function getCurrentCard() {
            const cards = Array.from(document.querySelectorAll('.video-card'));
            let best = null;
            let bestVisible = 0;
            const vh = window.innerHeight;
            for (const card of cards) {
                const r = card.getBoundingClientRect();
                const visible = Math.max(0, Math.min(r.bottom, vh) - Math.max(r.top, 0));
                if (visible > bestVisible) { bestVisible = visible; best = card; }
            }
            return best;
        }

        async function saveCurrentVideo() {
            const card = getCurrentCard();
            if (!card) return;
            const contentId = card.dataset.videoId || 'unknown';
            try {
                await fetch('/api/engagement/save', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ videoId: contentId, userId: 'default' })
                });
                animateFab('fab-save');
            } catch (e) { console.warn('Save failed', e); }
        }

        function toggleTranslation() {
            const card = getCurrentCard();
            if (!card) return;
            card.classList.toggle('hide-english');
            animateFab('fab-translate');
        }

        function openSpeedForCurrent() {
            const card = getCurrentCard();
            if (!card) return;
            const speedBtn = card.querySelector('.speed-btn');
            const menu = speedBtn && speedBtn.querySelector('.speed-menu');
            if (menu) {
                menu.classList.toggle('active');
                animateFab('fab-speed');
            }
        }

        function animateFab(id) {
            const el = document.getElementById(id);
            if (!el) return;
            el.style.transform = 'scale(0.92)';
            setTimeout(() => { el.style.transform = 'scale(1)'; }, 120);
        }

        // Wire FAB buttons
        document.getElementById('fab-save').addEventListener('click', (e) => { e.stopPropagation(); saveCurrentVideo(); });
        document.getElementById('fab-translate').addEventListener('click', (e) => { e.stopPropagation(); toggleTranslation(); });
        document.getElementById('fab-speed').addEventListener('click', (e) => { e.stopPropagation(); openSpeedForCurrent(); });
    </script>
