        // ðŸŽ¯ TIKTOK-STYLE SOCIAL FUNCTIONS
        function toggleLike(videoId, button) {
            const isLiked = button.classList.contains('liked');
            const countEl = button.querySelector('.sidebar-count');
            let count = parseInt(countEl.textContent) || 0;

            if (isLiked) {
                button.classList.remove('liked');
                button.style.fill = 'none';
                countEl.textContent = Math.max(0, count - 1);
            } else {
                button.classList.add('liked');
                button.style.fill = 'currentColor';
                countEl.textContent = count + 1;

                // Store liked videos
                const liked = JSON.parse(localStorage.getItem('likedVideos') || '[]');
                if (!liked.includes(videoId)) {
                    liked.push(videoId);
                    localStorage.setItem('likedVideos', JSON.stringify(liked));
                }
            }
        }

        function openComments(videoId) {
            alert('ðŸ’¬ Comments coming soon! Practice your Spanish by discussing videos with other learners.');
        }

        function shareVideo(videoId) {
            if (navigator.share) {
                navigator.share({
                    title: 'Learn Spanish with Langflix',
                    text: 'Check out this Spanish learning video!',
                    url: window.location.href
                }).catch(err => console.log('Share cancelled'));
            } else {
                alert('ðŸ“¤ Share this page URL to share the video!');
            }
        }

        function toggleSave(videoId, button) {
            const isSaved = button.classList.contains('saved');

            if (isSaved) {
                button.classList.remove('saved');
                button.style.fill = 'none';
            } else {
                button.classList.add('saved');
                button.style.fill = 'currentColor';

                // Store saved videos
                const saved = JSON.parse(localStorage.getItem('savedVideos') || '[]');
                if (!saved.includes(videoId)) {
                    saved.push(videoId);
                    localStorage.setItem('savedVideos', JSON.stringify(saved));
                }
            }
        }

