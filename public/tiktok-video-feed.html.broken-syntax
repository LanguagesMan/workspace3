            } else {
                console.log('â„¹ï¸ Skipping beginner tour');
            }
        }, 2000);

        console.log('ðŸŽ® Gamification initialized:', {
            streak: userStreak,
            xp: userXP,
            words: wordsLearned.size,
            videosWatched: videosWatched
        });

        // ========== SRS PRACTICE MODE (Swipe Decks) ==========
        // Note: practiceCards and currentCardIndex already declared at line 2625-2626

        // Open Practice Mode - Load saved words and show modal
        window.openPracticeMode = async function() {
            // Load saved words from localStorage (or Supabase if logged in)
            const savedWords = await loadPracticeWords();

            if (savedWords.length === 0) {
                alert('No saved words yet! Click on words in videos to save them for practice.');
                return;
            }

            practiceCards = savedWords;
            currentCardIndex = 0;

            // Show modal
            document.getElementById('practiceModal').style.display = 'flex';

            // Render first card
            renderPracticeCard();

            console.log(`ðŸŽ¯ Practice mode opened with ${practiceCards.length} words`);
        };

        // Close Practice Mode
        window.closePracticeMode = function() {
            document.getElementById('practiceModal').style.display = 'none';
            practiceCards = [];
            currentCardIndex = 0;
        };

        // Load practice words from saved vocabulary
        async function loadPracticeWords() {
            let words = [];

            // Try to load from Supabase if logged in
            if (currentUser) {
                try {
                    const { data, error } = await supabase
                        .from('vocabulary')
                        .select('word, translation, context_sentence')
                        .eq('user_id', currentUser.id)
                        .limit(20); // Max 20 cards per session

                    if (!error && data) {
                        words = data.map(w => ({
                            word: w.word,
                            translation: w.translation,
                            context: w.context_sentence || ''
                        }));
                    }
                } catch (err) {
                    console.warn('Error loading from Supabase:', err);
                }
            }

            // Fallback to localStorage if no Supabase data
            if (words.length === 0) {
                const localWords = Array.from(wordsLearned).slice(0, 20);
                words = localWords.map(w => ({
                    word: w,
                    translation: '[Translation]', // TODO: Get real translations
                    context: ''
                }));
            }

            return words;
        }

        // Render current practice card
        function renderPracticeCard() {
            if (currentCardIndex >= practiceCards.length) {
                // All cards done - show completion
                showPracticeComplete();
                return;
            }

            const card = practiceCards[currentCardIndex];
            const container = document.getElementById('swipeCardContainer');
            const contextHTML = card.context ? '<div class="card-context">"' + card.context + '"</div>' : '';

            container.innerHTML = `
                <div class="swipe-card" onclick="this.classList.toggle('flipped')">
                    <div class="card-word">${card.word}</div>
                    <div class="card-translation" style="display: none;">${card.translation}</div>
                    ${contextHTML}
                </div>
            `;

            // Update progress
            document.getElementById('practiceProgress').textContent =
                `${currentCardIndex + 1} / ${practiceCards.length}`;

            // Add flip functionality
            const cardEl = container.querySelector('.swipe-card');
            cardEl.addEventListener('click', () => {
                const translation = cardEl.querySelector('.card-translation');
                if (translation.style.display === 'none') {
                    translation.style.display = 'block';
                } else {
                    translation.style.display = 'none';
                }
            });
        }

        // Swipe card (know or don't know)
        window.swipeCard = function(result) {
            const card = practiceCards[currentCardIndex];

            // Track result for SRS algorithm (future enhancement)
            console.log(`Card ${currentCardIndex}: ${card.word} = ${result}`);

            // Award XP
            if (result === 'know') {
                addXP(10, 'Practiced word');
            }

            // Move to next card
            currentCardIndex++;
            renderPracticeCard();
        };

        // Show practice completion message
        function showPracticeComplete() {
            const container = document.getElementById('swipeCardContainer');
            container.innerHTML = `
                <div class="swipe-card" style="background: linear-gradient(135deg, #4CAF50, #45a049);">
                    <div style="font-size: 60px; margin-bottom: 20px;">ðŸŽ‰</div>
                    <div class="card-word" style="font-size: 32px;">Great Job!</div>
                    <div class="card-translation" style="display: block; font-size: 18px; margin-top: 20px;">
                        You practiced ${practiceCards.length} words
                    </div>
                    <button
                        onclick="closePracticeMode()"
                        style="
                            margin-top: 40px;
                            padding: 14px 32px;
                            background: white;
                            color: #4CAF50;
                            border: none;
                            border-radius: 12px;
                            font-size: 16px;
                            font-weight: 700;
                            cursor: pointer;
                        "
                    >
                        Done
                    </button>
                </div>
            `;

            document.getElementById('practiceProgress').textContent = 'Complete!';
        }

        // Update practice button count based on saved words
        function updatePracticeButton() {
            const practiceBtn = document.getElementById('practiceBtn');
            const practiceCount = document.querySelector('.practice-count');

            if (!practiceBtn || !practiceCount) return;

            const wordCount = wordsLearned.size;

            if (wordCount > 0) {
                practiceBtn.style.display = 'flex';
                practiceCount.textContent = wordCount;
            } else {
                practiceBtn.style.display = 'none';
            }
        }

        // Call updatePracticeButton whenever words are learned
        setInterval(updatePracticeButton, 2000);
        updatePracticeButton(); // Initial call

        console.log('ðŸŽ¯ SRS Practice Mode initialized');
    </script>
</body>
</html>
