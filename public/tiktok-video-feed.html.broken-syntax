            };

            const welcomeEl = document.createElement('div');
            welcomeEl.style.cssText = `
                position: fixed;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                background: linear-gradient(135deg, #667eea, #764ba2);
                color: white;
                padding: 32px 40px;
                border-radius: 20px;
                font-size: 18px;
                font-weight: 700;
