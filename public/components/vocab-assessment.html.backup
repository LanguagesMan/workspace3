<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="dns-prefetch" href="https://fonts.googleapis.com">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quick Spanish Level Assessment</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .assessment-container {
            background: white;
            border-radius: 24px;
            padding: 40px;
            max-width: 500px;
            width: 100%;
            box-shadow: 0 25px 80px rgba(0, 0, 0, 0.3);
        }

        .header {
            text-align: center;
            margin-bottom: 30px;
        }

        h1 {
            font-size: 28px;
            color: #1a1a1a;
            margin-bottom: 10px;
        }

        .subtitle {
            font-size: 16px;
            color: #666;
        }

        .progress-bar {
            width: 100%;
            height: 8px;
            background: #f0f0f0;
            border-radius: 4px;
            margin-bottom: 30px;
            overflow: hidden;
        }

        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, #667eea, #764ba2);
            transition: width 0.3s ease;
        }

        .word-card {
            background: #f8f9fa;
            border-radius: 16px;
            padding: 40px;
            text-align: center;
            margin-bottom: 30px;
        }

        .word-spanish {
            font-size: 48px;
            font-weight: 700;
            color: #1a1a1a;
            margin-bottom: 10px;
        }

        .word-category {
            font-size: 14px;
            color: #999;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .button-group {
            display: flex;
            gap: 16px;
        }

        button {
            flex: 1;
            padding: 18px 24px;
            border: none;
            border-radius: 12px;
            font-size: 16px;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.2s ease;
        }

        .btn-know {
            background: #10b981;
            color: white;
        }

        .btn-know:hover {
            background: #059669;
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(16, 185, 129, 0.3);
        }

        .btn-dont-know {
            background: #ef4444;
            color: white;
        }

        .btn-dont-know:hover {
            background: #dc2626;
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(239, 68, 68, 0.3);
        }

        .results {
            text-align: center;
            display: none;
        }

        .level-badge {
            display: inline-block;
            font-size: 72px;
            font-weight: 900;
            background: linear-gradient(135deg, #667eea, #764ba2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin: 20px 0;
        }

        .results-text {
            font-size: 18px;
            color: #666;
            margin-bottom: 30px;
        }

        .btn-start {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            padding: 18px 48px;
            display: inline-block;
        }

        .btn-start:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);
        }

        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .word-card {
            animation: slideIn 0.3s ease;
        }
    </style>

    <!-- Sentry Error Tracking -->
    <meta name="sentry-dsn" content="">
    <meta name="sentry-environment" content="production">
    <meta name="sentry-traces-sample-rate" content="0.1">
    <meta name="app-version" content="1.0.0">
    <script>
    // Load Sentry AFTER page is fully interactive
    window.addEventListener('load', function() {
        setTimeout(function() {
            var script = document.createElement('script');
            script.src = '/lib/sentry-client.js';
            script.defer = true;
            document.head.appendChild(script);
        }, 2000); // Load 2 seconds after page load
    });
    </script>
</head>
<body>
    <div class="assessment-container">
        <div class="header">
            <h1>ðŸ“š Quick Spanish Level Test</h1>
            <p class="subtitle">This takes 2 minutes â€¢ 20 words</p>
        </div>

        <div class="progress-bar">
            <div class="progress-fill" id="progressFill" style="width: 0%"></div>
        </div>

        <div id="assessmentSection">
            <div class="word-card">
                <div class="word-category" id="wordCategory">Common Word</div>
                <div class="word-spanish" id="wordSpanish">Loading...</div>
            </div>

            <div class="button-group">
                <button class="btn-know" onclick="answerWord(true)">
                    âœ“ I Know This
                </button>
                <button class="btn-dont-know" onclick="answerWord(false)">
                    âœ— I Don't Know
                </button>
            </div>
        </div>

        <div class="results" id="resultsSection">
            <div class="level-badge" id="detectedLevel">B1</div>
            <p class="results-text" id="resultsText">
                Great! You're at an Intermediate level
            </p>
            <button class="btn-start" onclick="startLearning()">
                ðŸš€ Start Learning
            </button>
        </div>
    </div>

    <script>
        // 20-word assessment covering A1-C2
        const assessmentWords = [
            // A1 (Beginner)
            { word: 'hola', level: 'A1', category: 'Basic' },
            { word: 'casa', level: 'A1', category: 'Basic' },
            { word: 'agua', level: 'A1', category: 'Basic' },
            { word: 'comer', level: 'A1', category: 'Basic' },

            // A2 (Elementary)
            { word: 'todavÃ­a', level: 'A2', category: 'Common' },
            { word: 'alguien', level: 'A2', category: 'Common' },
            { word: 'mientras', level: 'A2', category: 'Common' },
            { word: 'cuenta', level: 'A2', category: 'Common' },

            // B1 (Intermediate)
            { word: 'desarrollo', level: 'B1', category: 'Intermediate' },
            { word: 'ademÃ¡s', level: 'B1', category: 'Intermediate' },
            { word: 'anterior', level: 'B1', category: 'Intermediate' },
            { word: 'conseguir', level: 'B1', category: 'Intermediate' },

            // B2 (Upper-Intermediate)
            { word: 'plantear', level: 'B2', category: 'Advanced' },
            { word: 'Ã¡mbito', level: 'B2', category: 'Advanced' },
            { word: 'suponer', level: 'B2', category: 'Advanced' },
            { word: 'analizar', level: 'B2', category: 'Advanced' },

            // C1 (Advanced)
            { word: 'escasez', level: 'C1', category: 'Expert' },
            { word: 'discrepar', level: 'C1', category: 'Expert' },

            // C2 (Mastery)
            { word: 'coercitivo', level: 'C2', category: 'Master' },
            { word: 'perenne', level: 'C2', category: 'Master' }
        ];

        let currentWordIndex = 0;
        let knownWords = [];
        let userAnswers = [];

        function showWord() {
            if (currentWordIndex >= assessmentWords.length) {
                showResults();
                return;
            }

            const word = assessmentWords[currentWordIndex];
            document.getElementById('wordCategory').textContent = word.category;
            document.getElementById('wordSpanish').textContent = word.word;

            // Update progress
            const progress = ((currentWordIndex) / assessmentWords.length) * 100;
            document.getElementById('progressFill').style.width = progress + '%';
        }

        function answerWord(knows) {
            const word = assessmentWords[currentWordIndex];
            userAnswers.push({
                word: word.word,
                level: word.level,
                knows: knows
            });

            if (knows) {
                knownWords.push(word);
            }

            currentWordIndex++;
            showWord();
        }

        function detectLevel() {
            // Count known words by level
            const knownByLevel = {
                'A1': 0,
                'A2': 0,
                'B1': 0,
                'B2': 0,
                'C1': 0,
                'C2': 0
            };

            knownWords.forEach(w => {
                knownByLevel[w.level]++;
            });

            // Determine CEFR level (need to know 75%+ of level to pass)
            const totalByLevel = {
                'A1': 4,
                'A2': 4,
                'B1': 4,
                'B2': 4,
                'C1': 2,
                'C2': 2
            };

            let detectedLevel = 'A1';
            const levels = ['A1', 'A2', 'B1', 'B2', 'C1', 'C2'];

            for (let i = 0; i < levels.length; i++) {
                const level = levels[i];
                const percentage = knownByLevel[level] / totalByLevel[level];

                if (percentage >= 0.75) {
                    detectedLevel = level;
                }
            }

            return detectedLevel;
        }

        function showResults() {
            const level = detectLevel();

            // Hide assessment, show results
            document.getElementById('assessmentSection').style.display = 'none';
            document.getElementById('resultsSection').style.display = 'block';
            document.getElementById('progressFill').style.width = '100%';

            // Display results
            document.getElementById('detectedLevel').textContent = level;

            const levelDescriptions = {
                'A1': 'You\'re just starting out! Perfect for absolute beginners.',
                'A2': 'You know the basics! Ready for elementary Spanish.',
                'B1': 'Great! You\'re at an intermediate level.',
                'B2': 'Impressive! You\'re at upper-intermediate level.',
                'C1': 'Excellent! You\'re at an advanced level.',
                'C2': 'Amazing! You\'ve mastered Spanish!'
            };

            document.getElementById('resultsText').textContent = levelDescriptions[level];

            // Save to localStorage
            const profile = {
                cefrLevel: level,
                knownWords: knownWords.map(w => w.word),
                assessmentDate: new Date().toISOString(),
                totalKnown: knownWords.length,
                answers: userAnswers
            };

            localStorage.setItem('langflix_user_profile', JSON.stringify(profile));
            console.log('âœ… Profile saved:', profile);
        }

        function startLearning() {
            // Redirect to main app
            window.location.href = '/tiktok-video-feed.html';
        }

        // Initialize
        showWord();
    </script>
</body>
</html>
