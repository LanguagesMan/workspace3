<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="dns-prefetch" href="https://fonts.googleapis.com">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Re-test Your Level - Langflix</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .retest-container {
            background: white;
            border-radius: 24px;
            padding: 48px 40px;
            max-width: 500px;
            text-align: center;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        }

        .icon {
            font-size: 80px;
            margin-bottom: 24px;
        }

        .title {
            font-size: 32px;
            font-weight: 800;
            color: #1a1a1a;
            margin-bottom: 16px;
        }

        .subtitle {
            font-size: 18px;
            color: #666;
            line-height: 1.6;
            margin-bottom: 32px;
        }

        .stats {
            background: #f5f5f5;
            border-radius: 16px;
            padding: 24px;
            margin-bottom: 32px;
        }

        .stat-row {
            display: flex;
            justify-content: space-between;
            padding: 12px 0;
            border-bottom: 1px solid #e0e0e0;
        }

        .stat-row:last-child {
            border-bottom: none;
        }

        .stat-label {
            font-size: 16px;
            color: #666;
        }

        .stat-value {
            font-size: 16px;
            font-weight: 700;
            color: #667eea;
        }

        .level-change {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 16px;
            margin-bottom: 32px;
        }

        .old-level {
            font-size: 36px;
            font-weight: 800;
            color: #999;
        }

        .arrow {
            font-size: 32px;
            color: #2ecc71;
        }

        .new-level {
            font-size: 48px;
            font-weight: 800;
            color: #667eea;
        }

        .btn {
            padding: 18px 48px;
            border: none;
            border-radius: 50px;
            font-size: 18px;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s ease;
            width: 100%;
            margin-bottom: 12px;
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            box-shadow: 0 8px 24px rgba(102, 126, 234, 0.4);
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 32px rgba(102, 126, 234, 0.5);
        }

        .btn-secondary {
            background: transparent;
            color: #667eea;
            border: 2px solid #667eea;
        }

        .btn-secondary:hover {
            background: #f5f5f5;
        }
    </style>

    <!-- Sentry Error Tracking -->
    <meta name="sentry-dsn" content="">
    <meta name="sentry-environment" content="production">
    <meta name="sentry-traces-sample-rate" content="0.1">
    <meta name="app-version" content="1.0.0">
    <script>
    // Load Sentry AFTER page is fully interactive
    window.addEventListener('load', function() {
        setTimeout(function() {
            var script = document.createElement('script');
            script.src = '/lib/sentry-client.js';
            script.defer = true;
            document.head.appendChild(script);
        }, 2000); // Load 2 seconds after page load
    });
    </script>
</head>
<body>
    <div class="retest-container">
        <div class="icon">ðŸ“ˆ</div>
        <div class="title">Time to Level Up?</div>
        <div class="subtitle">
            You've been learning a lot! Want to see if you've improved?
        </div>
        
        <div class="stats" id="stats">
            <div class="stat-row">
                <span class="stat-label">Words Learned</span>
                <span class="stat-value" id="wordsLearned">127</span>
            </div>
            <div class="stat-row">
                <span class="stat-label">Days Since Last Test</span>
                <span class="stat-value" id="daysSinceTest">14 days</span>
            </div>
            <div class="stat-row">
                <span class="stat-label">Current Level</span>
                <span class="stat-value" id="currentLevel">A2</span>
            </div>
        </div>

        <div class="level-change">
            <span class="old-level" id="oldLevel">A2</span>
            <span class="arrow">â†’</span>
            <span class="new-level">?</span>
        </div>

        <button class="btn btn-primary" onclick="startRetest()">
            Take 30-Second Test ðŸš€
        </button>
        <button class="btn btn-secondary" onclick="maybeLater()">
            Maybe Later
        </button>
    </div>

    <script>
        // Load user stats
        const userLevel = localStorage.getItem('userLevel') || 'A1';
        const assessmentDate = localStorage.getItem('assessmentDate');
        
        document.getElementById('currentLevel').textContent = userLevel;
        document.getElementById('oldLevel').textContent = userLevel;
        
        // Calculate days since test
        if (assessmentDate) {
            const daysSince = Math.floor((Date.now() - new Date(assessmentDate).getTime()) / (1000 * 60 * 60 * 24));
            document.getElementById('daysSinceTest').textContent = `${daysSince} days`;
        }
        
        // Mock words learned (in real app, this would come from API)
        const wordsLearned = Math.floor(Math.random() * 200) + 50;
        document.getElementById('wordsLearned').textContent = wordsLearned;
        
        function startRetest() {
            // Clear previous assessment to allow retake
            localStorage.removeItem('assessmentCompleted');
            window.location.href = '/components/swipe-placement-test.html';
        }
        
        function maybeLater() {
            window.location.href = '/tiktok-video-feed.html';
        }
    </script>
</body>
</html>

