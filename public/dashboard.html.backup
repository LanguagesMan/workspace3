        </div>

        <!-- Quick Actions -->
        <div class="section" style="text-align: center;">
            <h2 class="section-title">Quick Actions</h2>
            <a href="/vocabulary-review.html" class="action-btn" id="reviewBtn">üìö Start Review</a>
            <a href="/discover-ai.html" class="action-btn">üì∞ Discover Content</a>
            <a href="/level-assessment.html" class="action-btn">üéØ Take Assessment</a>
        </div>
    </div>

    <!-- Bottom Navigation -->
    <nav class="bottom-nav">
        <a href="/tiktok-video-feed.html" class="nav-item">
            <div class="nav-icon">üé•</div>
            <div class="nav-label">Home</div>
