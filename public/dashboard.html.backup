    <!-- User State Management -->
    <script src="/js/user-state.js"></script>

    <script>
        async function loadDashboard() {
            try {
                // Wait for user state to initialize
                if (!window.userState.userId) {
                    await window.userState.init();
                }

                // Get dashboard data
                const response = await fetch(`/api/user/dashboard?userId=${window.userState.userId}`);
                const data = await response.json();

                if (data.success) {
                    renderDashboard(data.dashboard);
                }

                // Hide loading, show dashboard
                document.getElementById('loading').classList.add('hidden');
                document.getElementById('dashboard').classList.remove('hidden');

            } catch (error) {
                console.error('Error loading dashboard:', error);
                document.getElementById('loading').innerHTML = `
                    <div class="spinner"></div>
                    <p>Error loading dashboard</p>
                    <button onclick="location.reload()" class="action-btn" style="margin-top: 20px;">Retry</button>
                `;
            }
        }

        function renderDashboard(dashboard) {
            // Update welcome message
            document.getElementById('welcomeMessage').textContent = 
                `Welcome back, ${dashboard.user.username || 'Learner'}!`;

            // Update level
            document.getElementById('currentLevel').textContent = dashboard.user.level;

            // Update vocabulary stats
            const vocab = dashboard.vocabulary;
            document.getElementById('totalWords').textContent = vocab.total;
            document.getElementById('dueWords').textContent = vocab.due;

            // Update streak
            const streak = dashboard.activity.last7Days || 0;
            document.getElementById('streakCount').textContent = streak;
            document.getElementById('streakMessage').textContent = 
                streak > 1 ? 'Days in a row' : 'Start your streak!';

            // Update progress bars
            const masteryPercent = vocab.total > 0 ? Math.round((vocab.masteryBreakdown.filter(m => m.level >= 4).reduce((sum, m) => sum + m.count, 0) / vocab.total) * 100) : 0;
            document.getElementById('masteryPercent').textContent = masteryPercent + '%';
            document.getElementById('masteryProgress').style.width = masteryPercent + '%';

            const savedPercent = vocab.total > 0 ? Math.round((vocab.saved / vocab.total) * 100) : 0;
            document.getElementById('savedPercent').textContent = savedPercent + '%';
            document.getElementById('savedProgress').style.width = savedPercent + '%';

            const reviewPercent = vocab.saved > 0 ? Math.round(((vocab.saved - vocab.due) / vocab.saved) * 100) : 0;
            document.getElementById('reviewPercent').textContent = reviewPercent + '%';
            document.getElementById('reviewProgress').style.width = reviewPercent + '%';

            // Render activity chart
            renderActivityChart(dashboard.activity.byDay || {});

            // Generate recommendations
            generateRecommendations(dashboard);

            // Update review button
            if (vocab.due > 0) {
                document.getElementById('reviewBtn').textContent = `üìö Review ${vocab.due} Words`;
            }
        }

        function renderActivityChart(activityByDay) {
            const chart = document.getElementById('activityChart');
            chart.innerHTML = '';

            const days = ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'];
            const today = new Date().getDay();
            
            // Get last 7 days
            const last7Days = [];
            for (let i = 6; i >= 0; i--) {
                const date = new Date();
                date.setDate(date.getDate() - i);
                const dateStr = date.toISOString().split('T')[0];
                last7Days.push(dateStr);
            }

            const maxActivity = Math.max(...last7Days.map(d => activityByDay[d] || 0), 10);

            last7Days.forEach((dateStr, i) => {
                const count = activityByDay[dateStr] || 0;
                const height = (count / maxActivity) * 100;
                
                const bar = document.createElement('div');
                bar.className = 'activity-bar' + (count > 0 ? ' active' : '');
                bar.style.height = height + '%';
                bar.title = `${count} activities`;
                
                const label = document.createElement('div');
                label.className = 'activity-label';
                label.textContent = days[(today + i - 6 + 7) % 7];
                
                bar.appendChild(label);
                chart.appendChild(bar);
            });
        }

        function generateRecommendations(dashboard) {
            const container = document.getElementById('recommendations');
            const recommendations = [];

            const vocab = dashboard.vocabulary;
            const activity = dashboard.activity;

            // Due words recommendation
            if (vocab.due > 0) {
                recommendations.push({
                    title: `üìö ${vocab.due} Words Due for Review`,
                    description: 'Keep your vocabulary sharp! Review these words using our spaced repetition system.'
                });
            }

            // Streak recommendation
            if (activity.last7Days === 0) {
                recommendations.push({
                    title: 'üî• Start Your Learning Streak',
                    description: 'Build a daily habit! Even 5 minutes a day makes a huge difference.'
                });
            } else if (activity.last7Days < 7) {
                recommendations.push({
                    title: `üî• You're on a ${activity.last7Days}-day streak!`,
                    description: 'Keep it going! Come back tomorrow to continue your progress.'
                });
            }

            // Level recommendation
            if (!dashboard.user.level || dashboard.user.level === 'A2') {
                recommendations.push({
                    title: 'üéØ Take a Level Assessment',
                    description: 'Find your perfect starting level with our 5-question placement test.'
                });
            }

            // Content recommendation
            recommendations.push({
                title: 'üì∞ Discover New Content',
                description: `Find articles matched to your ${dashboard.user.level} level with personalized recommendations.`
            });

            // Render
            container.innerHTML = recommendations.map(rec => `
                <div class="recommendation">
                    <div class="recommendation-title">${rec.title}</div>
                    <div class="recommendation-description">${rec.description}</div>
                </div>
            `).join('');
        }

        // Initialize
        loadDashboard();
    </script>
</body>
</html>
