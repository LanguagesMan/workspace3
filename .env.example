# ==============================================================================
# üîê LANGFLIX ENVIRONMENT VARIABLES - COMPLETE TEMPLATE
# ==============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ==============================================================================
# üóÑÔ∏è DATABASE (REQUIRED)
# ==============================================================================
# Production: Use Supabase Postgres connection string
# Development: Can use local SQLite for testing
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public&pgbouncer=true
DATABASE_URL="postgresql://postgres:password@localhost:5432/langflix?schema=public"

# Supabase direct connection (for migrations)
DIRECT_DATABASE_URL="postgresql://postgres:password@localhost:5432/langflix?schema=public"

# ==============================================================================
# üîê AUTHENTICATION (REQUIRED)
# ==============================================================================
# Supabase Configuration
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your-anon-key-here"
SUPABASE_SECRET_KEY="your-service-role-key-here"
SUPABASE_JWT_SECRET="your-jwt-secret-here"

# JWT Secret for session tokens (MUST BE STRONG IN PRODUCTION)
# Generate with: openssl rand -base64 32
JWT_SECRET="your-secure-random-jwt-secret-minimum-32-characters"

# ==============================================================================
# ü§ñ AI SERVICES (REQUIRED FOR CORE FEATURES)
# ==============================================================================
# OpenAI - Required for transcription, content generation, and AI features
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-your-openai-api-key-here"

# DeepL Translation - Required for accurate Spanish/English translation
# Get from: https://www.deepl.com/pro-api
DEEPL_API_KEY="your-deepl-api-key-here"

# ==============================================================================
# üóûÔ∏è NEWS & CONTENT APIs (OPTIONAL - Enhances content discovery)
# ==============================================================================
# NewsAPI - For Spanish news articles
# Get from: https://newsapi.org/
NEWS_API_KEY="your-newsapi-key-here"

# World News API - Alternative news source
# Get from: https://worldnewsapi.com/
WORLD_NEWS_API_KEY="your-worldnews-api-key-here"

# The Guardian API - Quality journalism source
# Get from: https://open-platform.theguardian.com/
GUARDIAN_API_KEY="your-guardian-api-key-here"

# ==============================================================================
# üîç WEB SCRAPING & RESEARCH (OPTIONAL)
# ==============================================================================
# Firecrawl - Web scraping for article content
# Get from: https://firecrawl.dev/
FIRECRAWL_API_KEY="your-firecrawl-api-key-here"

# Perplexity AI - Advanced research capabilities
# Get from: https://www.perplexity.ai/
PERPLEXITY_API_KEY="your-perplexity-api-key-here"

# ==============================================================================
# üéôÔ∏è TEXT-TO-SPEECH (OPTIONAL - For audio narration)
# ==============================================================================
# ElevenLabs - High quality AI voice generation
# Get from: https://elevenlabs.io/
ELEVENLABS_API_KEY="your-elevenlabs-api-key-here"

# ==============================================================================
# üåç TRANSLATION SERVICES (OPTIONAL - Fallback options)
# ==============================================================================
# LibreTranslate - Free, self-hosted translation
# Optional API key for hosted version
LIBRETRANSLATE_API_KEY="your-libretranslate-key-or-leave-empty"

# Google Cloud Translation (Alternative)
GOOGLE_TRANSLATE_API_KEY="your-google-translate-key-here"

# ==============================================================================
# üìä OBSERVABILITY & MONITORING (RECOMMENDED FOR PRODUCTION)
# ==============================================================================
# Sentry - Error tracking and performance monitoring
# Get from: https://sentry.io/
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
SENTRY_ENVIRONMENT="production"
SENTRY_TRACES_SAMPLE_RATE="0.1"
SENTRY_PROFILES_SAMPLE_RATE="0.1"

# Vercel Analytics (if deploying to Vercel)
VERCEL_ANALYTICS_ID="your-vercel-analytics-id"

# ==============================================================================
# üí≥ PAYMENTS (REQUIRED FOR PREMIUM SUBSCRIPTIONS)
# ==============================================================================
# Stripe - Payment processing for $4.99/month Premium subscriptions
# Get from: https://dashboard.stripe.com/apikeys
#
# Setup Instructions:
# 1. Create Stripe account at https://stripe.com
# 2. Get API keys from https://dashboard.stripe.com/apikeys
# 3. For webhook secret:
#    - Go to https://dashboard.stripe.com/webhooks
#    - Add endpoint: https://your-domain.com/api/stripe-webhook
#    - Select events: checkout.session.completed, customer.subscription.*
#    - Copy webhook signing secret
#
# Test Mode (Development):
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key-here"
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key-here"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-signing-secret-here"
#
# Production Mode (uncomment when ready):
# STRIPE_SECRET_KEY="sk_live_your-stripe-live-secret-key"
# STRIPE_PUBLISHABLE_KEY="pk_live_your-stripe-live-publishable-key"
# STRIPE_WEBHOOK_SECRET="whsec_your-live-webhook-signing-secret"
#
# Pricing Configuration:
# - Premium: $4.99/month
# - Trial: 7 days free
# - The price is defined in the API endpoint (server.js line ~333)
#
# Test Cards (Test Mode Only):
# Success: 4242 4242 4242 4242 (any future date, any CVC)
# Decline: 4000 0000 0000 0002
# 3D Secure: 4000 0027 6000 3184

# ==============================================================================
# üöÄ APPLICATION CONFIGURATION
# ==============================================================================
# Server
NODE_ENV="development"
PORT="3001"

# CORS - Allowed origins (comma-separated)
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"

# Session
SESSION_SECRET="your-session-secret-here"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"

# ==============================================================================
# üß™ TESTING & CI/CD
# ==============================================================================
# Test Environment
TEST_DATABASE_URL="postgresql://postgres:password@localhost:5432/langflix_test?schema=public"

# CI/CD Flags
CI="false"
FIXED_VIEWPORT="false"
DISABLE_ANIMATIONS="false"

# ==============================================================================
# üìù LOGGING
# ==============================================================================
LOG_LEVEL="info"
LOG_FORMAT="json"

# ==============================================================================
# üìä ANALYTICS & TRACKING
# ==============================================================================
# Mixpanel - User behavior and engagement tracking
# Get from: https://mixpanel.com/settings/project
# Setup: Create account at https://mixpanel.com/register ‚Üí Get Project Token
# Free tier: 100,000 events/month
MIXPANEL_TOKEN="your-mixpanel-project-token-here"

# ==============================================================================
# üîß FEATURE FLAGS (OPTIONAL)
# ==============================================================================
ENABLE_AI_CONTENT_GENERATION="true"
ENABLE_VOICE_CONVERSATION="true"
ENABLE_ARTICLE_SCRAPING="true"
ENABLE_PODCAST_TRANSCRIPTION="true"
ENABLE_MUSIC_LYRICS="true"
